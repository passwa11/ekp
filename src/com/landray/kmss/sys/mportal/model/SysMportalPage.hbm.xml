<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class
		name="com.landray.kmss.sys.mportal.model.SysMportalPage"
		table="sys_mportal_page">
		<id
			name="fdId"
			column="fd_id"
			length="36">
			<generator
				class="assigned" />
		</id>

		<property
			name="fdName"
			column="fd_name"
			update="true"
			insert="true"
			length="200"
			not-null="false"
			access="com.landray.kmss.sys.language.interfaces.SysLangPropCommonAccessor" />
			
		<property
			name="fdTitle"
			column="fd_title"
			update="true"
			insert="true"
			length="200"
			not-null="false" />

		<property
			name="docCreateTime"
			column="doc_create_time"
			update="true"
			insert="true"
			not-null="false" />

		<property
			name="fdOrder"
			column="fd_order"
			update="true"
			insert="true"
			length="10"
			not-null="false" />

		<property
			name="fdEnabled"
			column="fd_enabled"
			update="true"
			insert="true"
			length="1"
			not-null="false" />

		<property
			name="fdLang"
			column="fd_lang"
			update="true"
			insert="true"
			length="50"
			not-null="false" />

		<property
			name="docAlterTime"
			column="doc_alter_time"
			update="true"
			insert="true"
			not-null="false" />

		<many-to-one
			name="docCreator"
			column="doc_creator_id"
			insert="true"
			update="true"
			not-null="false" />
		
		<property
			name="fdType"
			column="fd_type"
			update="true"
			insert="true"
			length="2"
			not-null="false" />
		
		<property
			name="fdLogo"
			column="fd_logo"
			update="true"
			insert="true"
			length="200"
			not-null="false" />	
			
		<property
			name="fdUrl"
			column="fd_url"
			update="true"
			insert="true"
			length="500"
			not-null="false" />
			
		<property
			name="fdMd5"
			column="fd_md5"
			update="true"
			insert="true"
			length="36"
			not-null="false" />
			
		<property
			name="fdIcon"
			column="fd_icon"
			update="true"
			insert="true"
			length="200"
			not-null="false" />
		<property
			name="fdImg"
			column="fd_img"
			update="true"
			insert="true"
			length="500"
			not-null="false" />
		
		 
	   <!-- 权限 开始-->
       <bag
			name="authReaders"
			table="sys_mportal_page_reader"
			lazy="true">
			<key column="fd_page_id" />
			<many-to-many
				class="com.landray.kmss.sys.organization.model.SysOrgElement"
				column="auth_reader_id" />
		</bag>

		<bag
			name="authEditors"
			table="sys_mportal_page_editor"
			lazy="true">
			<key column="fd_page_id" />
			<many-to-many
				class="com.landray.kmss.sys.organization.model.SysOrgElement"
				column="auth_editor_id" />
		</bag>
 

		<bag
			name="authAllReaders"
			table="sys_mportal_page_areader"
			lazy="true">
			<key column="fd_page_id" />
			<many-to-many
				class="com.landray.kmss.sys.organization.model.SysOrgElement"
				column="auth_all_reader_id" />
		 </bag>

		 <bag
			name="authAllEditors"
			table="sys_mportal_page_aeditor"
			lazy="true">
			<key column="fd_page_id" />
			<many-to-many
				class="com.landray.kmss.sys.organization.model.SysOrgElement"
				column="auth_all_editor_id" />
		 </bag>
         <!-- 权限 结束 -->
		 <bag name="cards" 
		 	 cascade="all-delete-orphan" 
		 	 order-by="fd_order asc"
		 	 lazy="true" 
		 	 inverse="true">
			<key column="fd_page_id" not-null="true" />
			<one-to-many class="com.landray.kmss.sys.mportal.model.SysMportalPageCard" />
		</bag> 
	</class>
</hibernate-mapping>
