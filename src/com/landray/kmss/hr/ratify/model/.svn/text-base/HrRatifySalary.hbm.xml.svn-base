<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <subclass 
        name="com.landray.kmss.hr.ratify.model.HrRatifySalary" 
        extends="com.landray.kmss.hr.ratify.model.HrRatifyMain"
        discriminator-value="com.landray.kmss.hr.ratify.model.HrRatifySalary">
        <join table="hr_ratify_salary">
	        <key
				column="fd_id"></key>
	        <property 
	            name="fdSalaryDate" 
	            column="fd_salary_date" 
	            update="true" 
	            insert="true"/>
	        <property 
	            name="fdSalaryBefore" 
	            column="fd_salary_before" 
	            update="true" 
	            insert="true"/>
	        <property 
	            name="fdSalaryAfter" 
	            column="fd_salary_after" 
	            update="true" 
	            insert="true"/>
	        <property 
	            name="fdSalaryDiff" 
	            column="fd_salary_diff" 
	            update="true" 
	            insert="true"/>
	        <property 
	            name="fdSalaryReason" 
	            column="fd_salary_reason" 
	            update="true" 
	            insert="true" 
	            length="2000"/>
	        <property 
	            name="fdSalaryLeaderView" 
	            column="fd_salary_leader_view" 
	            update="true" 
	            insert="true" 
	            length="2000"/>
	        <property 
	            name="fdSalaryHrView" 
	            column="fd_salary_hr_view" 
	            update="true" 
	            insert="true" 
	            length="2000"/>
	        <property 
	            name="fdSalaryRemark" 
	            column="fd_salary_remark" 
	            update="true" 
	            insert="true" 
	            length="2000"/>
	        <many-to-one 
	            name="fdSalaryStaff" 
	            column="fd_salary_staff_id" 
	            update="true" 
	            insert="true"/>
	        <many-to-one 
	            name="fdSalaryDept" 
	            column="fd_salary_dept_id" 
	            update="true" 
	            insert="true"/>
        </join>
    </subclass>
</hibernate-mapping>
