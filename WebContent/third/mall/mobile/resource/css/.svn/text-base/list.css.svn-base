.muiKmReuseTemplateItem {
    position: relative;
    border-radius: 1rem
}

.muiKmReuseTemplateItem .muiKmReuseTemplateListItem {
    /* padding: 0 20px; */
    padding: 0 15px;
    position: relative;
}

.muiKmReuseTemplateItem .muiReuseIcon {
    background: #DAE8FF url(../images/reuse_bg.png) no-repeat;
    background-size: cover;
    display: inline-block;
    width: 45px;
    height: 62px;
}

.image:after {
    content: "";
    display: inline-block;
    position: absolute;
    right: -3px;
    bottom: 0;
    margin-left: -14px;
    width: 14px;
    height: 14px;
    background: url("../images/enlarge@2x.png") no-repeat;
    background-size: 14px 14px;
}

.muiKmReuseTemplateItem .muiReuseRight {
    /* margin-left: 65px; */
    margin-left: 75px;
    border-bottom: 1px solid #E7E7E7;
    /* padding: 21px 70px 21px 0; */
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    /* 423 */
    height: 85px;
}

.muiKmReuseTemplateListItem .image {
    position: absolute;
    /* width: 45px;
    height: 62px; */
    width: 60px;
    height: 70px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    /* margin-top: 12px; */
    margin-top: 7px;

    /* 424 */
    padding: 7px 5px 3px;
}

.image img {
    width: 100%;
    height: 100%;
    -webkit-box-shadow: 0 1px 4px 0 rgba(153, 179, 210, 0.5);
    box-shadow: 0 1px 4px 0 rgba(153, 179, 210, 0.5);
}

.rightContent {
    position: absolute;
    top: 50%;
    left: 90px;
    transform: translate(0, -50%);
    width: calc(100% - 17rem);
}

.muiReuseRight p {
    /* line-height: 20px; */
    color: #2A304A;
    padding-bottom: 5px;

    /* 423 */
    font-size: 1.5rem !important;
}

.muiReuseRight span {
    /* display: inline-block; */
    /* font-size: 12px; */
    color: #9DA0AF;
    content: "";

    /* 423 */
    font-size: 1.3rem !important;
    display: block;
}

.muiReuseRight p,
.muiReuseRight span {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 100%;
}

.muiReuseRight .btn {
    position: absolute;
    right: 15px;
    top: 28px;
    width: 55px;
    height: 25px;
    /* line-height: 27px; */
    line-height: 25px;
    text-align: center;
    background: #FFFFFF;
    border: 1px solid #4285F4;
    border-radius: 25px;
    color: #4285F4;

    /* 423 */
    font-size: 1.3rem !important;
}

.muiKmReuseTemplateItem .muiReuseTextWrap .muiFontColorInfo {
    display: inline-block;
    max-width: 80%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.reuseTemplateItem.muiList {
    padding: 0rem;
}

.muiNoNetworkTip {
	  display: inline-block;
	  width: 100%;
	  opacity: 0.8;
	  font-size: 1.4rem;
	  color: #333333;
	  text-align: center;
	  margin: 20px 0;
} 

.muiKmReuseTemplateItem:last-child .muiReuseRight {
	border-bottom:0px;
}