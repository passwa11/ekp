body,td,th {
	font-family: Arial, Helvetica, sans-serif, "宋体";
	font-size: 12px;
	color: #333;
}
body {
	background-color: #FFF;
	margin-left: 0px;
	margin-top: 0px;
	margin-right: 0px;
	margin-bottom: 0px;
}
a:link, a:visited, a:active{
	font-size:12px;
	color:#434343;
	text-decoration:none;
}
a:hover {
	font-size:12px;
	color:#003cff;
	text-decoration:none;
	font-family: Arial, Helvetica, sans-serif, "宋体";
}


a.blue:link, a.blue:visited, a.blue:active{
	font-size:12px;
	color:#4788ee;
	text-decoration:none;
}
a.blue:hover {font-size:12px; color:#ff1e00; text-decoration:none;}

.bg_top{
	background-image: url(images/loading_jb_bg.gif);
	background-position:right;
	background-repeat: repeat-y;
	}
