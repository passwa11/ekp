@CHARSET "UTF-8";

.cheditor_view{
	transform: scale(1,1);
}

.ckeditor_container {
	position: relative;
	height: 100%;
	width: 100%;
}

.ckeditor_container .ckeditor_kanban {
	height: 100%;
	overflow: hidden;
}

.ckeditor_container .ckeditor_kanban .ckeditor_bdiv {
	position: relative;
	overflow: auto;
	height: 100%;
	text-align: center;
	border: 1px solid transparent;
	box-sizing: border-box;
}

.ckeditor_container .ckeditor_kanban .ckeditor_bdiv.nomal {
	position: relative;
	overflow: hidden;
	text-align: center;
}

.ckeditor_container .ckeditor_kanban .ckeditor_bdiv.nomal img {
	position: static;
	vertical-align: middle;
}

.ckeditor_container .ckeditor_kanban .ckeditor_tip {
	background: #000;
	opacity: 0.5;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 1000;
}

.ckeditor_container .ckeditor_kanban .ckeditor_tip span {
	width: 330px;
	height: 110px;
	padding-left: 90px;
	background: url("./img/back.png") no-repeat;
	display: block;
	font-size: 30px;
	color: #fff;
	position: absolute;
	top: 50%;
	left: 50%;
	margin-left: -210px;
	margin-top: -55px;
}

.transform_big_img {
	position: absolute;
	vertical-align: middle;
	text-align: center;
	top:500px;
}

.ckeditor_container .ckeditor_kanban img { 
	/* position: absolute; */
	vertical-align: middle;
}

.ckeditor_container .ckeditor_toolbar_plugins {
	position: absolute;
	top: 44px;
	right: 90px;
	/*height: 100%;*/
}

.ckeditor_container .ckeditor_toolbar_plugins div {
	cursor: pointer;
}

.ckeditor_container .magnify {
	width: 30px;
	height: 30px;
	background: url("./img/magnify.png");
}

.ckeditor_container .magnify.shrink {
	background: url("./img/shrink.png");
}

.ckeditor_container_up .ckeditor_left {
	position: absolute;
	top: 45%;
	width: 27px;
	height: 44px;
	left: 5%;
	background: url("./img/pointer.png") 0 0;
	overflow: hidden;
	transition-duration: 0s;
}

.ckeditor_container_up .ckeditor_right {
	position: absolute;
	top: 45%;
	width: 27px;
	height: 44px;
	right: 5%;
	background: url("./img/pointer.png") 0 -45px;
	overflow: hidden;
	transition-duration: 0s;
}

.ckeditor_container .ckeditor_thumb {
	position: absolute;
	right: 30px;
	opacity: 0.5;
	bottom: 50px;
	width: 110px;
	overflow: hidden;
	border: 1px solid #5b5b5b;
	background-color: #000;
	text-align: center;
	line-height: 112px;
	display: none;
}

.ckeditor_container .ckeditor_thumb .ckeditor_thumb_img {
	vertical-align: middle;
	max-width: 110px;
	max-height: 110px;
}

.ckeditor_container .ckeditor_thumb .ckeditor_selected {
	position: absolute;
	border: 3px solid #FCFF3C;
	z-index: 999;
	background: url(about:blank)
}

.ckeditor_close {
	position: absolute;
	top: 40px;
	right: 70px;
	width: 40px;
	height: 40px;
	background: url("./img/icon_close.png") no-repeat;
	cursor: pointer;
    background-size: 100%;
}


.ckeditor_container .ckeditor_left_scroll,.ckeditor_container .ckeditor_right_scroll {
	cursor:pointer;
	overflow: hidden;
	display: inline-block;
}
.ckeditor_container .ckeditor_left_scroll > i {
	background: url("./img/leftscroll.png") 0 0 no-repeat;
	background-size: 100%;
}
.ckeditor_container .ckeditor_right_scroll > i{
	background: url("./img/rightscroll.png") 0 0 no-repeat;
	background-size: 100%;
}
.lui_dialog_content{
	background-color: inherit;
}
.ckeditor_tool_box{
	position: absolute;
    margin: 0 auto;
    left: 0;
    right: 0;
    height: 45px;
    background: rgba(0,0,0,0.5);
    border-radius: 4px;
    z-index: 1;
    text-align: center;
    bottom: 50px;
    width: 250px;
    line-height:45px;
}
.ckeditor_tool_box > span{
	display: inline-block;
    height: inherit;
    width: 31px;
    position: relative;
    cursor: pointer;
}
.ckeditor_zoom_nam{
	width:70px !important;
	user-select:none;
}
.ckeditor_zoom_nam > span{
	display: inline-block;
	width: 48px;
    line-height: 30px;
    border-radius: 3px;
    padding-left: 8px;
    height: 30px;
    background: transparent;
    color: #fff;
    border: 1px solid #fff;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
}
.ckeditor_zoom_input{
	width: 28px;
    background: transparent;
    border: 0;
    color: #fff;
    font-size: 12px;
}
.ckeditor_tool_box > span > i {
	display: inline-block;
	width: 20px;
	height: 20px;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    /* line-height: 20px; */
    margin: auto;
}
.ckeditor_zoom_plus > i{
	background: url("./img/icon-add.png") 0 0 no-repeat;
	background-size: 100%;
}
.ckeditor_zoom_minus > i{
	background: url("./img/icon-minus.png") 0 0 no-repeat;
	background-size: 100%;
}