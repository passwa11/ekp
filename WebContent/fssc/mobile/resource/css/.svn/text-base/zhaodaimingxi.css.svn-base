
.ld-entertain-detail .ld-entertain-detail-persionlInfo{
    border-top: 1px solid #eee;
    padding-left:0.3rem;
}
.ld-entertain-detail-costInfo{
    padding-left:0.3rem;
}
.ld-line20px{
   height:0.2rem;
   background: #F2F2F2; 
}
.ld-entertain-detail .ld-entertain-detail-persionlInfo > div,
 .ld-entertain-detail-costInfo > div{
display: flex;
align-items: center;
justify-content: space-between;
height:1rem;
padding-right:0.3rem;
border-top: 1px solid #eee;
font-size: 0.28rem;
color: #434343;
}
.ld-entertain-detail-costInfo > div{
    border-top: none;
    border-bottom:1px solid #eee;
}
.ld-entertain-detail .ld-entertain-detail-persionlInfo > div:first-child{
border-top: none;
}
.ld-entertain-detail .ld-entertain-detail-costInfo > div:last-child{
border-bottom: 1px solid #eee;
}
.ld-entertain-detail .ld-entertain-detail-persionlInfo > div> span:first-child{
font-size: 0.28rem;
color: #999999;
}
.ld-entertain-detail .ld-entertain-detail-persionlInfo > div> span:last-child{
font-size: 0.28rem;
color: #434343;
}
