/* footer */
.ld-feesCharged-footer{
    position: fixed;
    height:1.41rem;
    width:100%;
    bottom:0;
    background: #fff;
    z-index: 98;
}
.ld-freesCharged-footer-conent{
    display: flex;
    justify-content: space-around;
    height:1rem;
    background: white;
    margin-top: 0.41rem;
    box-shadow: 0 -5px 5px -5px #f2f2f2;
}
.ld-freesCharged-footer-conent > div {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}
.ld-freesCharged-footer-conent > div i {
    height:0.4rem;
    width:0.4rem;
}
.ld-freesCharged-footer-conent > div span{
    font-size: 0.2rem;
    color: #434343;
}
.ld-footer-home i{
    background:url(../images/index.png) no-repeat center center;
    background-size: cover;
}
.ld-footer-home.active i{
    background:url(../images/index_active.png) no-repeat center center;
    background-size: cover;
}
.ld-footer-home.active span,.ld-footer-mine.active span{
    color: #4285F4;
}
.ld-footer-mine i{
    background:url(../images/mine.png) no-repeat center center;
    background-size: cover;
}
.ld-footer-mine.active i{
    background:url(../images/mine_active.png) no-repeat center center;
    background-size: cover;
}
.ld-footer-center{
    position: relative;
    height:1.26rem;
    width:1.9rem;
    margin-top: -0.42rem;
    /* border-top: 1px solid #f2f2f2; */
    box-shadow: 0 -5px 5px -5px #f2f2f2;
    border-radius: 0.48rem;
    box-sizing: border-box;
    background: white;
}
div.ld-footer-center span{
    height:0.86rem;
    width:1.5rem;
    background: #4285F4;
    border-radius: 0.43rem;
    line-height: 0.86rem;
    text-align: center;
    position: absolute;
    font-size: 0.3rem;
    color: white;
}