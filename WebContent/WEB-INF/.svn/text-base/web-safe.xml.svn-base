<?xml version="1.0" encoding="UTF-8"?>

<web-app
	id="WebApp_ID"
	version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
		http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>kmss_sys</display-name>
	<context-param>
		<param-name>context-root</param-name>
		<param-value>kmss2</param-value>
	</context-param>
	<context-param>
		<param-name>pluginContext</param-name>
		<param-value>com.landray.kmss.framework.service.plugin.loader.XmlApplicationPluginContext</param-value>
	</context-param>
	<context-param>
		<param-name>pluginMode</param-name>
		<param-value>safe</param-value>
	</context-param>
	<context-param>
		<param-name>loadFramework</param-name>
		<param-value>kmssConfig;spring</param-value>
	</context-param>
	<context-param>
		<param-name>springFrameworkFile</param-name>
		<param-value>spring-safe</param-value>
	</context-param>
	<context-param>
        <param-name>contextClass</param-name>
        <param-value>com.landray.kmss.sys.config.loader.KmssLookupXmlWebApplicationContext</param-value>
    </context-param>
	<listener>
		<listener-class>
			com.landray.kmss.framework.plugin.loader.PluginContextLoaderListener</listener-class>
	</listener>
	<filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>com.landray.kmss.web.filter.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>mode</param-name>
			<param-value>safe</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>  
        <servlet-name>springmvc</servlet-name>  
        <servlet-class>com.landray.kmss.sys.config.loader.KmssSpringDispatcherServlet</servlet-class>  
        <load-on-startup>2</load-on-startup>
    </servlet>
	<servlet-mapping>
		<servlet-name>springmvc</servlet-name>
		<url-pattern>/data/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>springmvc</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>springmvc</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/sys/config/resource/jsperror.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/sys/config/resource/jsperror.jsp</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/sys/config/resource/e403.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/sys/config/resource/e404.jsp</location>
	</error-page>
	<error-page>
		<error-code>503</error-code>
		<location>/sys/config/resource/e503.jsp</location>
	</error-page>

	<jsp-config>
		<taglib>
			<taglib-uri>/WEB-INF/kmss-bean.tld</taglib-uri>
			<taglib-location>/WEB-INF/kmss-bean.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>/WEB-INF/kmss-html.tld</taglib-uri>
			<taglib-location>/WEB-INF/kmss-html.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>/WEB-INF/kmss-logic.tld</taglib-uri>
			<taglib-location>/WEB-INF/kmss-logic.tld</taglib-location>
		</taglib>
	</jsp-config>
</web-app>
