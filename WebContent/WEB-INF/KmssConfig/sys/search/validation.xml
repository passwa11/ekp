<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE form-validation PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>
	<formset>
		<form name="sysSearchMainForm">
			<field
				property="fdName"
				depends="required,maxlength">
				<arg
					key="sysSearchMain.fdName"
					bundle="sys-search"
					position="0" />
				<arg1
					name="maxlength"
					key="${var:maxlength}"
					resource="false" />
				<var>
					<var-name>maxlength</var-name>
					<var-value>200</var-value>
				</var>
			</field>
			<field
				property="fdCondition"
				depends="required,maxlength">
				<arg
					key="sysSearchMain.fdCondition"
					bundle="sys-search"
					position="0" />
				<arg1
					name="maxlength"
					key="${var:maxlength}"
					resource="false" />
				<var>
					<var-name>maxlength</var-name>
					<var-value>2000</var-value>
				</var>
			</field>
			<field
				property="fdDisplay"
				depends="required,maxlength">
				<arg
					key="sysSearchMain.fdDisplay"
					bundle="sys-search"
					position="0" />
				<arg1
					name="maxlength"
					key="${var:maxlength}"
					resource="false" />
				<var>
					<var-name>maxlength</var-name>
					<var-value>2000</var-value>
				</var>
			</field>
		</form>
	</formset>
</form-validation>
