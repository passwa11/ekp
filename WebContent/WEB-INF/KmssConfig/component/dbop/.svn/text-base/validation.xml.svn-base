				property="fdDescription"
				depends="required,maxlength">
				<arg
					key="compDbcp.fdDescription"
					bundle="component-dbop"
					position="0" />
				<arg1
					name="maxlength"
					key="${var:maxlength}"
					resource="false" />
				<var>
					<var-name>maxlength</var-name>
					<var-value>1500</var-value>
				</var>
			</field>
