 		 -->

 		 <!--If you want to sys.ftsearch the field add it in the element sys.ftsearchFields -->
 		 <!-- 新增keyword,creator也加入 -->
		<multiFieldQueryParser>
					<searchFields sep=",">title,subject,fileName,fullText,content,creator,keyword,juniorSummary,attachemnt</searchFields>
		</multiFieldQueryParser>
	</search>

	<!-- 查询结果设置-->													
	<searchResult>
