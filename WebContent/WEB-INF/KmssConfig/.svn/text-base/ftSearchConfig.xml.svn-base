			<luceneField name="attachemnt" label="fdAttachment" setFragmenter="100" type="Text"  fieldType="attachment"/>	
			<luceneField name="juniorSummary" label="fdJuniorSummary"   fieldType="summary"  setFragmenter="100" type="Text"/>	
			
