/* 公共通用 Starts
   ========================================================================== */

  /*清除浮动 Starts*/
.lui_custom_list_container:after,
.lui_workforce_management_tab:after,
.lui_workforce_management_tab-list:after,
.lui_workforce_management-table-btn-row:after,
.lui_workforce_management-inner-tab-wrap:after,
.lui_workforce_management-inner-tab-list:after{
  content: '';
  display: table;
  visibility: hidden;
  clear: both;
}
  /*清除浮动 Ends*/


.lui_workforce_management_container {
    width:98%; 
    margin-right: auto;
    margin-left: auto;
}
.lui_workforce_management_container-fluid {
  margin-right: auto;
  margin-left: auto;
}

/* 公共通用 Ends
   ========================================================================== */

/*     Starts
   ========================================================================== */
.lui_workforce_management_tab{

}
.lui_workforce_management_tab-wrap{
  height: 50px;
  background: #F6F6F6;
  padding: 0 25px 0;
  position: relative;
}
.lui_workforce_management_tab-heading{
  font-size: 14px;
  color: #333;
  line-height: 50px;
  display: inline-block;
  float: left;
}
.lui_workforce_management_tab-list-wrap{
  display: inline-block;
  padding: 8.5px 0;
}
.lui_workforce_management_tab-list{
  list-style: none;
  border-radius: 4px;
  border: 1px solid #D5D5D5;
}
.lui_workforce_management_tab-list > li{
  cursor: pointer;
  float: left;
  padding: 6px 10px;
}
.lui_workforce_management_tab-list > li.active{
  color: #fff;
  background-color: #37AEE9;
}
.lui_workforce_management_tab-content{
  padding: 10px 20px;
}
.lui_workforce_management_tab-content-list{

}
.lui_workforce_management_tab-content-list > li{
   list-style: none;
   display: none;
}
.lui_workforce_management_tab-content-list > li.active{
   display: block;
}

.lui_workforce_management-inner-tab{
  
}
.lui_workforce_management-inner-tab-wrap{
	margin-bottom: 8px;
}
.lui_workforce_management-table-btn-row{
  padding: 10px 0;
}
.lui_workforce_management-table-btn-wrap{
  float: right;
  color: #333;
}
.lui_workforce_management-table-btn-wrap > span{
  display: inline-block;
  line-height: 20px;
  padding: 5px 14px;
  background: #F6F6F6;
  border: 1px solid #D5D5D5;
  border-radius: 5px;
  cursor: pointer;
  margin-left: 4px;
}
.lui_workforce_management-table-btn-wrap > span:hover{
  color: #fff;
  background: #37AEE9;
  border: 1px solid #37AEE9;
}
.lui_workforce_management-table{
  width: 100%;
  text-align: center;
  border: 1px solid #D5D5D5;
  border-top:none;
}
.lui_workforce_management-table > thead{
  background: #F6F6F6;
}
.lui_workforce_management-table > thead > tr > th{
  font-size: 14px;
  color: #333333;
  padding: 10px 0;
  font-weight: normal;
}
.lui_workforce_management-table > tbody > tr:hover {
  background-color: #F6F6F6;
}
.lui_workforce_management-table > tbody > tr > td{
  color: #333333;
  padding: 10px 0;
  font-weight: normal;
  border-bottom: 1px solid #D5D5D5;
}
.lui_workforce_management-table > tbody > tr > td > span{
  padding: 0 5px;
}
.lui_workforce_management-table > tbody > tr > td > span > a{
  color: #0D93D6;
}
.lui_workforce_management-table > tbody > tr > td > span > a:hover{
  text-decoration: underline;
}
.lui_workforce_management-inner-tab-list{
  margin: 0;
  padding: 0;
  list-style-type: none;
  margin: 0 auto;
  position: relative;
  font-size: 14px;
  border-bottom: 1px solid #E5E5E5;
}

.lui_workforce_management-inner-tab-list[data-style="calendar"] {
  text-align: center;
  user-select: none;
  border-bottom: none;
}

.lui_workforce_management-inner-tab-list > li{
  float: left;
  text-align: center;
  position: relative;
  cursor: pointer;
  margin-right: 15px;
  padding: 0 6px 5px 6px;
  line-height: 22px;
}

.lui_workforce_management-inner-tab-list[data-style="calendar"] > li{
  float: none;
  padding: 0 6px;
  height: 22px;
  display: inline-block;
}

.lui_workforce_management-inner-tab-list > li.active{
  color: #0D93D6;
  border-bottom: 2px solid #37AEE9;
}

.lui_workforce_management-inner-tab-list[data-style="calendar"] > li:hover {
  color: #0D93D6;
}

.lui_workforce_management-inner-tab-list[data-style="calendar"] > li.active{
  border-bottom: none;
}

.lui_workforce_management-inner-tab-content-wrap{
  display: block;
}
.lui_workforce_management-inner-tab-content-list{
  list-style: none;
}
.lui_workforce_management-inner-tab-content-list > li{
  display: none;
}
.lui_workforce_management-inner-tab-content-list > li.active{
  display: block;
}
.lui_workforce_management-table-remark{
  font-size: 12px;
  color: red;
  padding: 10px 0;
  text-align: left;
}

#btnEditCalendar {
	margin-top: 8.5px;
	padding: 6px 10px; 
	position: absolute;
	right: 25px;
	display: inline-block; 
	border-radius: 4px; 
	border: 1px solid #D5D5D5;
	cursor: pointer;
}

#btnEditCalendar:hover {
	background-color: #37AEE9;
	color: white;
}

#btnEditCalendar[data-active="false"] {
	display: none;
}

.lui_timearea_column_td{
	word-break: break-all;
}
/*      Ends
   ========================================================================== */



