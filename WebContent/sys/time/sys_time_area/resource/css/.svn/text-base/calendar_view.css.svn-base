@charset "UTF-8";

.divider {
	margin-top: 25px;
	font-family: PingFang-SC-Semibold;
	font-size: 16px;
	color: #37AEE9;
	padding: 8px 12px;
	border-bottom: 1px solid #4AA1F2;
	font-family: PingFang-SC-Semibold;
}

.taglists {
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
	padding: 8px 12px;
}

.taglists-item {
	white-space: nowrap;
	margin: 6px 0;
}

.taglist-title {
	position: relative;
	top: 6px;
	vertical-align: top;
	display: inline-block;
	width: 56px;
	font-family: PingFangSC-Regular;
	font-size: 14px;
	color: #333333;
}

.taglist {
	display: inline-block;
	white-space: pre-wrap;
}

.tag {
	display: inline-block;
	font-family: PingFangSC-Regular;
	font-size: 14px;
	color: #333333;
	// border: 1px solid #D5D5D5;
	border-radius: 1px;
	padding: 2px 0;
	padding-right: 22px;
}

.tag-flag {
	position: relative;
	top: 1px;
	display: inline-block;
	width: 14px;
	height: 14px;
	margin-right: 6px;
	border-radius: 7px;
}

.tag-flag-2{
	position: relative;
	top: 1px;
	display: inline-block;
	margin-right: 6px;
	width: 0;
	height: 0;
	border-top: 12px solid transparent;
	border-right: 12px solid transparent;
}


.calendar .month-container {
	height: auto;
}

.calendar .month-container > div {
	display: inline-block;
	min-height: 318px;
	border: 1px solid #E5E5E5;
}

.calendar table.month {
	/*border: 1px solid #E5E5E5;*/
}

.calendar table.month th.month-title {
    height: 30px;
    background-color: #F6F6F6;
    line-height: 30px;
    font-size: 14px;
    color: #333333;
    padding: 0;
}

.calendar table.month th.day-header {
	padding: 4px 0;
}

.calendar table td{
	width: 42px;
	height: 42px;
}

.calendar table.month tr td .day-content {
	color: #333;
	padding: 5px 6px 0 6px;
	position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
}

.calendar table.month tr td.late .day-content {
	color: #999;
}

.calendar table.month tr td .day-lunar {
	position: absolute;
	left: 0;
	bottom: 0;
	right: 0;
	text-align: center;
	color: #999999;
	font-size: 0;
}

.calendar table.month tr td .day-lunar span {
	white-space: nowrap;
	display: inline-block;
	font-size: 10px;
	max-width: 36px;
	overflow: hidden;
	text-overflow: ellipsis;
}

.calendar table.month tr td .day-sign[data-type="1"] {
	position: absolute;
    left: 9px;
    top: 3px;
    height: 24px;
    z-index: -1;
    width: 24px;
    border-radius: 12px;
    display: inline-block;
}

.calendar table.month tr td .day-sign[data-type="2"],
.calendar table.month tr td .day-sign[data-type="3"] {
	position: absolute;
	width: 0;
	height: 0;
	border-top: 10px solid transparent;
    border-right: 10px solid transparent;
    left: 4px;
    top: 2px;
}

.calendar table.month tr td .day-sign[data-type="2"] {
	border-top-color: #E60000;
}

.calendar table.month tr td .day-sign[data-type="3"] {
	border-top-color: #2B9AE0;
}

.calendar table.month tr td.day {
	cursor: unset;
}

.calendar table.month tr td .day-mask {
	display: none !important;
}

.panel-default {
	box-shadow: none;
}

.year-title {
	color: #57AFE6;
}


.calendar .calendar-header {
	border: none;
	box-shadow: none;
}

.calendar .calendar-header table {
	width: 50%;	
}

.calendar .calendar-header table th {
	font-size: 18px;
	font-weight: unset;
}

.calendar .calendar-header table th:hover {
	background: none;
	color: #57AFE6;
}

.calendar .calendar-header table th.next,
.calendar .calendar-header table th.prev {
	line-height: 20px;
}

.calendar .calendar-header table th.next span {
    border-top: 6px solid transparent;
    border-bottom: 6px solid transparent;
    border-left: 6px solid #aaa;
    font-size: 0;
    width: 0;
    height: 0;
    vertical-align: middle;
    position: relative;
    top: -2px;
}

.calendar .calendar-header table th.prev span {
    border-top: 6px solid transparent;
    border-bottom: 6px solid transparent;
    border-right: 6px solid #aaa;
    font-size: 0;
    width: 0;
    height: 0;
    vertical-align: middle;
    position: relative;
    top: -2px;
}

.calendar .calendar-header table th.next:hover span {
	border-left-color: #57AFE6;
}
.calendar .calendar-header table th.prev:hover span {
	border-right-color: #57AFE6;
}

div.lui-mcalendar-b-r{
  overflow: auto;
  overflow-x:scroll;
}
