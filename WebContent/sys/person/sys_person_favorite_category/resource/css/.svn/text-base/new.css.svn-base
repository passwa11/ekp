@charset "UTF-8";

#models {
  padding: 0 46px;
}

.searchbar {
  padding: 36px 0;
}

.searchbar input {
  border: 1px solid #d5d5d5;
  padding: 0 12px;
  height: 35px;
  width: 60%;
  font-size: 14px;
  -webkit-transition: border 0.3s;
  transition: border 0.3s;
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}

.searchbar input:focus,
.searchbar input:hover {
  border: 1px solid #4285f4;
}

.searchbar button {
  height: 35px;
  width: 50px;
  vertical-align: top;
  padding: 0;
  position: relative;
  left: -5px;
  background-color: #4285f4;
  color: white;
  outline: none;
  border: 1px solid #4285f4;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  border-top-right-radius: 2px;
  border-bottom-right-radius: 2px;
  cursor: pointer;
  -webkit-transition: background-color 0.3s, border 0.3s;
  transition: background-color 0.3s, border 0.3s;
  background-image: url(../images/icon_search.png);
  background-size: 18px 17px;
  background-position: 50% 50%;
  background-repeat: no-repeat;
}

.searchbar button:hover {
  background-color: #3174e3;
}

#modelList {
  width: 100%;
}

#modelList .modelListItem_wrap {
  display: inline-block;
  width: 25%;
  margin: 2px 0;
}

#modelList .modelListItem {
  position: relative;
  cursor: pointer;
  display: inline-block;
  padding: 2px 6px 2px 16px;
  border-radius: 4px;
  vertical-align: top;
  -webkit-transition: background-color 0.3s;
  transition: background-color 0.3s;
}

#modelList .modelListItem:hover {
  background-color: rgba(79, 134, 236, 0.4);
}

#modelList .modelListItem .modelListItem_label {
  font-size: 16px;
  color: black;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 156px;
  display: inline-block;
}

#modelList .modelListItem .modelListItem_dot {
  display: inline-block;
  width: 4px;
  height: 4px;
  border-radius: 2px;
  background-color: black;
  position: absolute;
  top: 11px;
  left: 6px;
}

#categories {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
