.muiPersonHeader {
    background-color: #3ab0d6;
}
.muiPersonHeader a {
	padding: 1.2rem;
	min-height: 6.5rem;
}
.muiPersonHeader a:active .mui{
	color: rgb(228, 228, 228)!important;
}
.muiPersonLink{
    color: #fff;
    display: table;
    position: relative;
}

.muiPersonLeft{
	display: table-cell;
	vertical-align: middle;
	padding-right: 15px;
	
}
.muiPersonBody{
	display: table-cell;
	vertical-align: middle;
	color: #fff;
	width: 100%;
}
.muiPersonName{
  margin-bottom: .5rem;
	font-size: 2rem;
}
.muiPersonSignature{ font-size: 1.4rem; }
.muiAvatarRound {
    border-radius: 50%;
    border: 2px solid #fff;
    text-align: center;
    display: inline-block;
    overflow: hidden;
}
.muiAvatarRound img {
	width: 100%;
}
.muiAvatarL {
    width: 5rem;
    height: 5rem;
}
.muiPersonForward {
    padding-left: .8rem;
    display: table-cell;
    font-weight: bold;
    color: #fff;
    padding-right: 0;
    font-size: 2.9rem;
    border: none;
}
.muiPersonForward:ACTIVE {
	 color: #d9d9d9;
}

.muiSubscribeBox {
  margin: 1.3rem 1.1rem;
  background-color: #fff;
  border: 1px solid #d4d4d4;
}
.muiMsgBox {
  line-height: 2.2rem;
  border-bottom: 1px solid #d4d4d4;
}
.muiPersonIcon {
  margin-right: .8rem;
  width: 2.2rem;
  height: 2.2rem;
  line-height: 2.4rem;
  text-align: center;
  color: #fff;
  font-size: 1.6rem;
  border-radius: 3px;
  display: inline-block;
  position: relative;
  top: -.2rem;
}
.magenta {
	background-color: #ff8793; 
}
.muiMsgBox a {
	display: block;
	padding: 1rem 1.2rem;
	color: inherit;
}
.muiOperationList>li a:active,
.muiPersonLinkItem a:active,
.muiMsgBox a:active {
	background-color: #f8f8f8;
}
.muiOperationList {
    margin: 0;
    padding: 0;
    list-style: none;
    width: 100%;
    display: table;
    border-top: 0;
    background-color: #fff;
    table-layout: fixed;
}
.muiOperationList > li {
    display: table-cell;
    padding: 1rem;
    text-align: center;
    color: #ababab;
    
}
.muiOperationList > li > a {
    margin: -0.5rem;
    padding: 1rem;
    display: block;
}
.muiOperationList > li .iconbox {
    margin: 0 auto 0.5rem;
    width: 3rem;
    height: 3rem;
    line-height: 3rem;
    text-align: center;
    font-size: 2rem;
    position: relative;
}
.iconbox .mui{
	font-size: 2.4rem;
}

.muiOperationList > li .num {
  padding: 0.2rem;
  min-width: 1rem;
  height: 1rem;
  line-height: 1.2rem;
  color: #fff;
  font-size: 1rem;
  border-radius: 50%;
  background-color: #ef613b;
  position: absolute;
  left: 2.1rem;
  bottom: 0;
}

 .muiPersonListLink {
    list-style: none;
    background-color: #fff;
    margin-bottom: 1.2rem;
    border: 1px solid #d4d4d4;
}
.muiPersonListBox {
    margin: 1.2rem;
}

.muiPersonLinkItem a {
	display: block;
	padding:1.2rem 1rem;
	color: inherit;
	line-height: 2.2rem;
}
.muiPersonListLink .muiPersonLinkItem {
	 border-bottom: 1px solid #d4d4d4;
}
.muiPersonListLink .muiPersonLinkItem:last-child {
	border-bottom: none;
}
.muiMsgBox a:after,
.muiPersonLinkItem a:after {
	display: inline-block;
    font-family: FontMui;
    text-align: center;
    font-style: normal;
    font-weight: normal;
    line-height: 2.5rem;
    font-size: 1.6rem;
    vertical-align: middle;
    content: "\C025";
    float:right;
    color:#ababab;
    -webkit-font-smoothing: antialiased;
}
.muiPersonLinkItem:nth-of-type(3n+1) .muiPersonIcon{
	background-color:#929aff;
}
.muiPersonLinkItem:nth-of-type(3n+2) .muiPersonIcon{
	background-color:#ffae40;
}
.muiPersonLinkItem:nth-of-type(3n+3) .muiPersonIcon{
	background-color:#92d564;
}
