@charset "UTF-8";

.tb_n_simple.hidden>tbody>tr>td {
	padding: 0px;
}

.tb_n_simple {
	border-collapse: collapse;
	background-color: #FFFFFF;
	margin: 0 auto;
}

.tb_n_simple .tb_normal .inputsgl {
	height: 25px;
	border: 0px;
	border-bottom: 1px solid #b4b4b4;
}

.tb_n_simple .td_normal_title {
	word-wrap: break-word;
	text-align: right;
}

.tb_n_simple>tbody>tr>td {
	padding: 10px;
	word-break: break-word;
}

.tb_n_simple>tbody>tr>td.td_normal_title {
	vertical-align: top;
}

.tb_n_simple .inputsgl, .tb_n_simple .inputselectsgl, .tb_n_simple .inputselectsgl .input
	{
	padding-bottom: 4px;
}

.info_container {
	padding: 0px 6px;
}

.info_container .el-divider {
	background-color: #fff;
	border-bottom: 1.3px dotted #DCDFE6;
}

.el-table__header {
	width: 100% !important;
}

.el-table__body {
	width: 100% !important;
}

.el-table td, .el-table th {
	padding: 6px !important;
}

.el-table th {
	background-color: rgb(242, 242, 242) !important;
}

.el-table--border, .el-table--group {
	border-color: rgb(215, 215, 215) !important;
}

.el-table td, .el-table th.is-leaf {
	border-color: rgb(215, 215, 215) !important;
}

.el-table--border::after, .el-table--group::after, .el-table::before {
	background-color: rgb(215, 215, 215) !important;
}

.rule_info_container .table_info {
	width: 96%;
	margin: 0px auto;
}