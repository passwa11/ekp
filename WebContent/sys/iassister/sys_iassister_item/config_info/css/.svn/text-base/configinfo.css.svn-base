@charset "UTF-8";

.table_info.config {
	padding: 0px 16px;
}

.table_info.config .el-form-item {
	
}

.config_info_wrapper .config_hint {
	margin-bottom: 16px;
}

.config_info_wrapper .el-select {
	width: 88px;
}

.config.submit {
	margin: 16px 0px;
}

.submit .submit_hint {
	margin-bottom: 6px;
}

.config .tab_title {
	color: #409EFF
}

.condition .cond_content {
	margin-top: 6px;
}

.cond_content.check .el-select {
	width: 106px;
}

.cond_content.check  .el-checkbox-group {
	display: flex;
	flex-direction: column;
	line-height: 28px;
}

.showinfos .el-checkbox-group {
	display: inline-block;
	padding-left: 30px;
}

.showinfos .showinfo {
	padding-top: 6px;
}

.showinfo.link .el-table {
	margin-top: 6px;
}

.showinfo.link .input_container {
	/* padding: 0px !important; */
	
}

.input_container .cell {
	padding: 0px !important;
}

.cond_editor .el-col {
	padding: 3px;
}

.cond_editor .el-collapse {
	border: 1px solid #dfe6ec !important;
}

.cond_editor .el-collapse-item__arrow {
	display: none;
}

.cond_editor .el-collapse-item__header {
	padding-left: 0;
	height: 30px;
	line-height: 30px;
	text-align: center;
	justify-content: center;
	border-bottom: 1px solid #dfe6ec !important;
	background-color: #9cd2fb;
}

.cond_editor .el-icon-arrow-right:before {
	
}

.cond_editor .el-collapse-item__wrap {
	background-color: #fff;
	border-bottom: 1px solid #dfe6ec !important;
}

.cond_editor .el-collapse-item__content {
	padding: 0;
}

.cond_editor .el-tree {
	border: none;
	height: 300px;
	overflow-y: auto;
}

.cond_editor .btns {
	padding: 16px 0px;
	display: flex;
	justify-content: center;
}

.cond_editor .btns .el-button {
	min-width: 66px;
}

.btns .el-button.symbol {
	font-size: 20px;
}

th.input_container  .cell {
	/* position: relative; */
	
}

th.title_th  .cell:after {
	content: "*";
	color: #f56c6c;
	margin-left: 6px;
	font-size: 18px;
	vertical-align: text-top;
}