.model-change {

    padding: 20px;
    background: #fff;
    margin-left: 0;
    margin-bottom: 0;
    border: 1px solid #DDDDDD;
    box-shadow: 0 0 6px 0 rgba(0, 0, 0, 0.06);
    border-radius: 4px;
    overflow: auto;
    z-index: 1000;
}

.model-change-nav {
    overflow: hidden;
    margin-bottom: 20px;
}

.model-change-nav-item {
    font-size: 12px;
    color: #333333;
    float: left;
    margin-right: 20px;
}

.model-change-content-item {
    overflow: hidden;
    border-radius: 4px;
    border: 1px solid #DFE3E9;
    margin-bottom: 5px;
}

.model-change-slide {
    margin-left: 116px;
}

.model-change-slide-header {
    margin: 0 10px;
    padding: 0 20px;
    position: relative;
}

.model-change-slide-prev,
.model-change-slide-next {
    width: 10px;
    height: 17px;
    top: 50%;
    margin-top: -8px;
    cursor: pointer;
}

.model-change-slide-prev {
    position: absolute;
    left: 0;
    background: url(../images/qian.png) no-repeat center;
    background-size: contain;
}

.model-change-slide-next {
    position: absolute;
    right: 0;
    background: url(../images/hou.png) no-repeat center;
    background-size: contain;
}

.model-change-slide-item {
    margin: 10px;
    max-width: 124px;
    height: 40px;
    border: 1px solid #F6F7FA;
    border-radius: 2px;
    box-sizing: border-box;
    padding: 0 20px;
    position: relative;
    cursor: pointer;
    background: #F6F7FA;
}

.model-change-slide-item.active {
    border-color: #4285f4;
    background: #ECF2FD;
}

.model-change-slide-item.active p {
    color: #4285f4;
}

.model-change-slide-item p {
    line-height: 38px;
    margin: 0;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 12px;
    color: #666666;
}

.model-change-slide-item span {
    position: absolute;
    padding: 3px 5px;
    font-size: 12px;
    color: #FFFFFF;
    border-radius: 50%;
    right: -9px;
    top: -9px;
    background: #4285f4;
    line-height: 1em;
}

.model-change-slide-content {
    background: #F5F6FA;
    border-radius: 4px;
    padding: 20px;
    margin-right: 180px;
}

.model-change-list-line {
    padding: 20px 0;
    overflow: hidden;
    border-top: 1px solid #DFE3E9;
}

.model-change-list-line:first-child {
    padding: 14px 0;
    background: #F8F8F8;
    border-top: 0;
}

.model-change-list-line>p:nth-child(3) {
    margin-left: 116px;
    line-height: 2em;
    color: #666666;
}

.model-change-list-line:nth-child(3)>p {
    margin-top: 16px;
}

.model-change-list-line>p {
    margin: 0;
    font-size: 14px;
    color: #333333;
    padding: 0 10px;
    line-height: 2em;
}

.model-change-list-line>p.model-change-list-desc {
    font-size: 12px;
}
.model-change-list-line>div.model-change-list-desc {
    display: inline-block;
    width: 85%;
}

.model-change-list-line>p:nth-child(2) {
    margin-left: 116px;
    line-height: 2em;
    color: #666666;
}

.model-change-list-line>p:first-child {
    text-align: center;
    width: 96px;
    float: left;
}

@keyframes arrMove {
    0% {
        transform: translateX(0);
    }

    50% {
        transform: translateX(2px);
    }

    100% {
        transform: translateX(0);
    }
}