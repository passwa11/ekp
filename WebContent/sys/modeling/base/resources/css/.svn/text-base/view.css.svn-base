/* 视图样式优化 */
.model-view-panel-table>td{
    padding-top:0!important;
}
.model-view-panel-table .td_normal_title{
    font-size:14px;
    vertical-align:top;
}
.model-view-panel-table .model-view-panel-table-td{
    padding-left: 10px;
    padding-bottom: 20px;
    padding-right: 10px;
}
.model-opt-panel-table-base,.model-panel-table-base{
    margin-bottom:30px;
}
.model-panel-child-table{
    margin:0;
    width: 100%;
}
.model-panel-child-table tr{
    line-height: 40px
}
.model-panel-child-table tr td{
    padding: 0 !important;
    padding-left: 10px !important;
}
.model-panel-child-table .tr_normal_title .head{
    color: #354052;
    padding: 0;
    padding-left: 10px;
    vertical-align: inherit;
    text-align: left;
}
.model-panel-child-table .model-panel-child-table-title p{
    color: #999999;
    position:relative;
}
.model-panel-child-table .model-panel-child-table-title p.label:after{
    content: '';
    position: absolute;
    width: 12px;
    height: 12px;
    background: url(../images/show.png) no-repeat center;
    background-size: contain;
    top: 13px;
    margin-left: 10px;
    cursor: pointer;
}
.model-panel-child-table .model-panel-child-table-item p{
    margin:0;
    color: #4285f4;
    cursor: pointer;
    transition: all 0.3s;
    float: left;
    padding: 0 10px;
    position: relative;
}
.model-panel-child-table .model-panel-child-table-item p a{
    font-size:12px;
}
.model-panel-child-table .model-panel-child-table-item p:before{
    content: '';
    position: absolute;
    width: 1px;
    height: 10px;
    background: #D9D9D9;
    left: 0;
    top: 50%;
    margin-top: -5px;
}
.model-panel-child-table .model-panel-child-table-item p:first-child:before {
    display: none;
}
.model-panel-child-table .model-panel-child-table-item p:hover {
    color: #8EB6F8;
}
.model-panel-child-table .model-panel-child-table-item p>a:hover {
    color: #8EB6F8;
}
.model-add-panel-table-create,.model-data-create{
    border: 1px dashed #CCCCCC;
    border-radius: 2px;
    text-align: center;
    height: 28px;
    line-height: 28px;
    cursor: pointer;
}
.model-panel-child-table-create div,.model-data-create div{
    display: inline-block;
    padding-left: 20px;
    background: url(../images/table-create.png) no-repeat left;
    background-size: 14px;
}
.model-view-panel-table .model-view-panel-table-td .inputselectsgl .selectitem,
.model-view-panel-table .model-view-panel-table-td .inputselectmul .selectitem,
.inputselectsgl .selectitem, .inputselectmul .selectitem{
    background: url(../images/show.png);
    background-repeat: no-repeat;
    background-position: center center;
    background-size: 14px;
}
.view_flag_no{
    width:14px;
    height:14px;
    background: url("../images/panel/icon-radio.png") no-repeat center;
    display: inline-block;
    cursor: pointer;
}
.view_flag_yes{
    width:14px;
    height:14px;
    background: url("../images/panel/icon-radio-active.png") no-repeat center;
    display: inline-block;
    cursor: pointer;
}
.view_flag_last{
    margin-left:20px;
}
.modeling-viewcover-tip{
    display: inline-block;
    width: 16px;
    height: 16px;
    position: relative;
    background: url(../images/views/modeling-tips.png) no-repeat center;
    background-size: contain;
    cursor: pointer;
    top: 3px;
    left: 3px;
    margin-right: 10px;
}
.modeling-viewcover-tip:hover {
    background: url(../images/views/modeling-tips-hover.png) no-repeat center;
    background-size: contain;
}
.modeling-viewcover-tip:hover>span{
    visibility: visible;
}
.modeling-viewcover-tip>span{
    visibility: hidden;
    width: 230px;
    position: absolute;
    color:#fff;
    font-weight: normal;
    border-radius: 2px;
    background-color: #393C41;
    box-shadow: 0 2px 5px 0 rgba(0,0,0,0.1);
    padding:10px;
    z-index: 99;
    bottom: 100%;
    right: -30px;
    transform: translate(50%,-10px);
    cursor:default;
    line-height: initial;
    z-index: 10;
}
.modeling-viewcover-tip>span::after{
    content: "";
    position: absolute;
    z-index: 100;
    bottom: -16px;
    left: 70px;
    transform: translate(50%,-1px);
    border-width: 8px;
    border-style: solid;
    border-color: #393C41 transparent transparent transparent;
}
.model-view-is-default>div{
    display: inline-block;
}
.model-view-setting .model-view-is-default{
    margin-left: 55px;
}

.model-edit-view-oper-tab-config-item {
    display: flex;
    vertical-align: middle;
    align-items: center;
    justify-content: space-between;
}
.model-edit-view-oper-tab-config-item>.tab-data-filter-value{
    padding:0;
}