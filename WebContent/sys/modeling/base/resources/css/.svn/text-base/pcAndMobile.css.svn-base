@charset "UTF-8";

.modeling-pam-top {
    width: 100%;
    position: absolute;
    top: 0px;
    height: 80px;
    padding: 0px 0 17px 0;
}

.modeling-pam-top ul {
    list-style: none;
}

.modeling-pam-top ul li {
    cursor: pointer;
}

.modeling-pam-nav {
    font-size: 14px;
    color: #333333;
    height: 30px;
    line-height: 30px;
    overflow: hidden;
    padding-left: 14px;
}

.modeling-pam-nav > div {
    cursor: pointer;
    display: inline-block;
    overflow: hidden;
}

.modeling-pam-nav > div i {
    float: left;
    width: 14px;
    height: 14px;
    margin-top: 8px;
    background: url(../images/qian.png) no-repeat center;
    background-size: contain;
    margin-right: 6px;
}

.modeling-pam-nav > div p {
    float: left;
    margin: 0;
}

.modeling-pam-top-left, .modeling-pam-top-right {
    height: 32px;
    line-height: 32px;
    font-size: 14px;
}

.modeling-pam-top-left {
    width: 40%;
    padding-left: 20px;
    float: left;
}

.modeling-pam-top-right {
    width: 40%;
    padding-right: 23px;
    float: right;

}

.modeling-pam-top-left ul li {
    float: left;
    margin-right: 32px;

}

.modeling-pam-top-right ul li {
    float: right;
    margin-left: 10px;
    background: #FFFFFF;
    border: 1px solid #DDDDDD;
    border-radius: 2px;
    padding: 0 7px;
    min-width: 90px;
    text-align: center;
}

.modeling-pam-top-left ul li.active {
    color: #4285F4;
    border-bottom: 2px solid #4285F4;
}

.modeling-pam-top-right ul li.active {
    background: #4285F4;
    border-radius: 2px;
    color: #FFFFFF;
}

.modeling-pam-content {
    position: absolute;
    top: 80px;
    width: 100%;
    overflow: hidden;
}

.modeling-pam-pc-icon, .modeling-pam-mobile-icon {
    display: inline-block;
    height: 16px;
    width: 16px;
    float: left;
    margin-right: 16px;
    background-size: 16px;
}

.modeling-pam-pc-icon {

    background: url(../images/pam/pc@2x.png) no-repeat center;
    background: url(../images/pam/pc.png) no-repeat center;

}

.modeling-pam-mobile-icon {
    background: url(../images/pam/mobile@2x.png) no-repeat center;
    background: url(../images/pam/mobile.png) no-repeat center;
}