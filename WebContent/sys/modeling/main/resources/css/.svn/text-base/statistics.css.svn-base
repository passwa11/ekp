@charset "utf-8";  

.statistics-body{
	width: 100%;
}

.statistics-body .more {
	max-height: 24rem;
}

.statistics-body .statistics-content {
	width: 100%;
	display: flex;
	overflow-y: auto;
	table-layout: fixed;
	white-space: nowrap;
	width: auto;
	min-width: 100%;
}
.statistics-body .statistics-content::-webkit-scrollbar {
	display: none;
}
.statistics-body .statistics-content .statistics-content-item{
	min-width: 33.4%;
	width:auto !important;
	background: #FFFFFF;
	box-shadow: 0px 0px 20px 0px rgb(153 179 210 / 20%);
	margin: 1rem 0 1rem 0;
	float: left;
	height: 88px;
	background: #FFFFFF;
	background: rgba(66,133,244,0.12);
	border-radius: 4px;
	display: table;
}
.statistics-content-item-unit{
	font-size: 16px;
	min-width: 30px;
}

.statistics-body .statistics-content .statistics-content-item .statistics-content-item-name{
	height: 4rem;
	font-family: PingFangSC-Regular;
	font-size: 1.3rem;
	color: #2A304A;
	letter-spacing: 0;
	text-align: center;
	margin-top: -10px;
}

.statistics-body .statistics-content .statistics-content-item .statistics-content-item-value{
	height: 6rem;
	font-family: PingFangSC-Regular;
	font-size: 2.5rem;
	color: #4285F4;
	letter-spacing: 0;
	text-align: center;
	line-height: 6rem;
	font-weight: 400;
	max-width: 100%;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	padding: 0 1rem 0 1rem;
}

.statistics-body .statistics-more {
	width: 100%;
	text-align: center;
	font-size: 1.5rem;
	color: #4285f4;
	background: #ffffff;
	display: inline-block;
}

.statistics-body .statistics-more>i {
	display: inline-block;
	width: 16px;
	height: 16px;
	position: relative;
	top: 4px;
	background: url(../../../base/resources/images/views/modeling-sidedown.png) no-repeat center;
}

.statistics-body .statistics-less {
	width: 100%;
	text-align: center;
	font-size: 1.5rem;
	color: #4285f4;
	background: #ffffff;
	display: inline-block;
}

.statistics-body .statistics-less>i {
	display: inline-block;
	width: 16px;
	height: 16px;
	position: relative;
	top: 4px;
	background: url(../../../base/resources/images/views/modeling-sideup.png) no-repeat center;
}
