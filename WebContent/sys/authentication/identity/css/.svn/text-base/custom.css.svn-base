/* 身份验证 */

.lui_verify_identity_container{
    height: 170px;
    position: relative;
}
.lui_verify_identity_head{}
.lui_verify_identity_desc{
    margin-bottom: 15px;
}
.lui_verify_identity_form{}
.lui_verify_identity_form label{}
.lui_verify_identity_form input{
    display: inline-block;
    padding: 2px 5px;
    width: 180px;
    border: 1px solid #DFE3E9;
    line-height: 28px;
}
.lui_verify_identity_form2{
    display: inline-block;
    padding: 2px 5px;
    width: 9px;
    border: 1px solid #DFE3E9;
    line-height: 28px;
}
.lui_verify_identity_btn{
    display: inline-block;
    height: 32px;
    line-height: 32px;
    padding: 0 20px;
    color: #fff;
    border-radius: 4px;
    font-size: 12px;
    margin-left: 10px;
    cursor: pointer;
}
.lui_verify_identity_tips{
    position: absolute;
    bottom: 1px;
    left: 15px;
    color: #999;
}
.lui_verify_identity_tipsStype{
    position: absolute;
    bottom: -30px;
    left: 15px;
    color: #999;
}
/* 操作提示 */
.lui_verify_identity_msg{
    text-align: center;
    position: absolute;
    left: 0;
    right: 0;
    top: 50%;
    margin-top: -54px;
}
.lui_verify_identity_icon_area{
    margin-bottom:16px;
}
.lui_verify_identity_icon{
    display:inline-block;
    width:36px;
    height:36px;
    background-repeat: no-repeat;
    background-position: center;
}
.lui_verify_identity_icon.icon_warning{
    background-image:url(../images/icon-warning.png);
}
.lui_verify_identity_text_area{
    margin-bottom:10px;
}
.lui_verify_identity_opr_area{
    color:#666;
    font-size:12px;
}
