@charset "UTF-8";
.settingContent>table{
    margin-top: 20px;
}
.tokenConfigTitle,.shareConfigTitle{
    font-size: 14px;
    color: #333333;
    font-weight: 600;
    padding: 4px 6px;
    vertical-align:top;
}
.tokenConfigContent>div,.shareConfigContent>div{
    padding: 4px 6px;
}
.tokenConfigContent>div>input,.shareConfigContent>div>input{
    width: 400px;
    height:32px;
    line-height:32px;
    background: #FFFFFF;
    border: 1px solid #DDDDDD;
    border-radius: 2px;
    padding: 0 4px;
    box-sizing: border-box;
}
.shareConfigContent>.inputselectsgl {
    width: 200px;
    height:32px;
    line-height:32px;
    background: #FFFFFF;
    border: 1px solid #DDDDDD;
    border-radius: 2px;
    margin: 4px 6px;
    box-sizing: border-box;
}
.shareConfigContent>.inputselectsgl .inputdatetime{
    top:0;
}
.shareConfigContent>.inputselectsgl>div>input{
    height: 30px;
    line-height: 30px;
}
.tokenConfigContent>div>select,.shareConfigContent>div>select{
    width: 400px;
    height:32px;
    line-height:32px;
    background: #FFFFFF;
    border: 1px solid #DDDDDD;
    border-radius: 2px;
    box-sizing: border-box;
    cursor: pointer;
}
.tokenConfigContent>div>textarea,.shareConfigContent>div>textarea{
    width:400px;
    border: 1px solid #DDDDDD;
    border-radius: 2px;
    resize: none;
    box-sizing: border-box;
    padding:0 4px;
}
.span-red{
    color:red;
}
div.reminderNoticeMark{
    padding: 0 8px;
    font-size: 12px;
    color: #999999;
}
.shareConfigContent>div+div{
    padding: 0 8px;
    font-size: 12px;
    color: #999999;
}
.settingFoot{
    margin:10px 0;
    text-align: center;
}
.settingFoot>a:first-child{
    display: inline-block;
    padding: 0 30px;
    height: 30px;
    line-height: 30px;
    background-color: #4285F4;
    border: 1px solid #4285F4;
    border-radius: 2px;
    font-size: 12px;
    color: #FFFFFF;
}
.settingFoot>a:nth-child(2){
    display: inline-block;
    padding: 0 30px;
    height: 30px;
    line-height: 30px;
    background-color: #FFF;
    border: 1px solid #DDDDDD;
    border-radius: 2px;
    font-size: 12px;
    color: #4285F4;
}