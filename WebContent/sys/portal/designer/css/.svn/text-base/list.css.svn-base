/*===== 选择呈现&主题&页面模板 图文列表 Starts =====*/
.lui_portal_imgTxt_frame {
    padding-top: 5px;
    padding-bottom: 5px;
}

.lui_themeList_frame{
    padding-top:36px;
}

.lui_portal_imgTxt_item {
    padding: 8px 7.5px;
    cursor: pointer;
    position: relative;
}

.lui_portal_imgTxt_item:hover .lui_portal_imgTxt_title, .lui_portal_imgTxt_item_current .lui_portal_imgTxt_title {
    color: #4285F4;
}

.lui_portal_imgTxt_item:hover .lui_portal_imgTxt_thumb, .lui_portal_imgTxt_item_current .lui_portal_imgTxt_thumb {
    border-color: #4285F4;
}

.lui_portal_imgTxt_item_current .lui_portal_imgTxt_item_flag {
    display: block;
    position: absolute;
    left: 10px;
    top: 20px;
    height: 16px;
    background: #4285F4;
    line-height: 16px;
    font-size: 12px;
    color: #fff;
    padding: 0 10px;
}

.lui_portal_imgTxt_thumb {
    border: 1px solid #ddd;
    border-radius: 4px;
    height: 130px;
    line-height: 128px;
    text-align: center;
    position:relative;
}

.lui_portal_imgTxt_thumb img {
    max-width: 100%;
    max-height: 100%;
    vertical-align: middle;
}

.lui_portal_imgTxt_frame .lui_listview_gridtable_table tr td {
    border-bottom: none;
    padding: 0;
}

.lui_portal_imgTxt_title {
    text-align: center;
    padding-top: 4px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 220px;
    text-align: center;
    margin: 0 auto;
    color: #2A304A;
}
.lui_portal_imgTxt_desc{
    text-align:center;
    color:#999;
}
.lui_portal_imgTxt_item_flag {
    display: none;
}

.lui_portal_imgTxt_item_flag:after {
    content: "";
    display: inline-block;
    width: 6px;
    height: 16px;
    background: url(../images/image_jiao@2x.png) no-repeat left top;
    background-size: 6px auto;
    position: absolute;
    right: -6px;
    top: 0;
}

/* ===== IE8一倍图 =====*/
@media \0screen\,screen\9 {
    .lui_portal_imgTxt_item_flag:after {
        background-image: url(../images/image_jiao.png) ;
    }
}

.lui_portal_imgTxt_frame .lui_listview_gridtable_table tbody tr:last-child {
    border-bottom: none;
}

/*===== 选择呈现&主题图文 Ends =====*/
/* 搜索 */
.lui_portal_imgTxt_input_search {
    width: 100%;
    position:fixed;
    /* margin-left: 10px; */
    padding-bottom: 5px;
    padding-top: 5px;
    left: 0px;
    background: #fff;
    z-index: 2;
    top: 0;
}

.lui_portal_imgTxt_input_search input {
    margin-left:10px;
    padding: 2px 5px;
    height: 18px;
    line-height: 18px;
}

.lui_portal_imgTxt_input_search .lui_portal_imgTxt_btn {
    display: inline-block;
    background: #4285F4;
    color: #fff;
    font-size: 14px;
    padding: 0 10px;
    height: 26px;
    line-height: 26px;
    border-radius: 4px;
}

/* 搜索 */

/* 主题预览优化 */
.lui-theme-type{
    padding:0 8px;
    height: 25px;
    background: rgb(234, 241, 255);
    border-radius: 155px;
    display: inline-block;
    position: absolute;
    right: 10px;
    top: 8px;
    line-height: 25px;
    font-size: 12px;
    color: #2778FF;
    text-align: center;
    z-index: 1;
}
.lui-theme-type.lui-theme-type-sys {
    background: #F4F4F4;
    color: #7D7D7D;
}