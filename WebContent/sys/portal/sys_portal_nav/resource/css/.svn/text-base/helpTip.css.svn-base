@charset "utf-8";

/* tip提示框 Starts
   ========================================================================== */
.lui_prompt_tooltip{
  vertical-align: top;
  margin: 0 5px;
  display: inline-block;
  position: relative;
}
.lui_prompt_tooltip_drop{
  width: 16px;
  height: 16px;
  vertical-align: middle;
  display: inline-block;
  cursor: pointer;
}
.lui_prompt_tooltip_drop > img{
  width: 100%;
  height: 100%;
}
.lui_dropdown_tooltip_menu{
  z-index: 10000;
  display: none;
  padding: 10px;
  min-width: 310px;
  border: 1px solid #ccc;
  border: 1px solid rgba(0, 0, 0, .15);
  border-radius: 4px;
  background-color: #f6f6f6;
  -webkit-box-shadow: 0 0 12px rgba(0, 0, 0, .175);
  box-shadow: 0 0 12px rgba(0, 0, 0, .175);
  position: absolute;
  bottom: 26px;
  left: 50%;
  margin-left: -166px;
  white-space:  normal;
}
.lui_dropdown_tooltip_menu:after,
.lui_dropdown_tooltip_menu:before{
  content: '';
  display: inline-block;
  width: 0;
  height: 0;
  vertical-align: middle;
  border-top: 8px dashed;
  border-top: 8px solid \9;
  border-right: 10px solid transparent;
  border-left: 10px solid transparent;
  position: absolute;
  left: 50%;
  margin-left: -10px;
  bottom: 0;
}
.lui_dropdown_tooltip_menu:after{
  color: #f6f6f6;
  bottom: -7px;
}
.lui_dropdown_tooltip_menu:before{
  color: #ccc;
  color: rgba(0, 0, 0, .1);
  bottom: -8px;
}
/* tip提示框 Ends
   ========================================================================== */
