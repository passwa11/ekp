
/*=== 新员工入职信息完善 Starts =============================================*/
.lui-changePwd-bg{ background-color: #f4fcfe!important; }
.lui-changePwd-header{ text-align: center;}
.lui-changePwd-header{
  margin-bottom: 20px;
  min-height: 240px;
  text-align: center;
  background: #34c8f3 url(../images/changePwd-header-bg-1.png) no-repeat 50% 0;
  background-size: 100% auto;
  position: relative;
  overflow: hidden;
}
.lui-changePwd-header:after,
.lui-changePwd-header:before{
  content: '';
  display: block;
  position: absolute;
}
.lui-changePwd-header:after{
  width: 100%;
  height: 256px;
  background: url(../images/changePwd-header-bg-2.png) no-repeat 50% 100%;
  left: 0;
  bottom: -55px;
  z-index: 2;
}
.lui-changePwd-header:before{
  width: 205px;
  height: 195px;
  background: url(../images/changePwd-header-bg-3.png) no-repeat 50% 100%;
  left: 50%;
  bottom: 0;
  z-index: 3;
  margin-left: 194px;
}
.lui-changePwd-header-title{
  width: 50%;
  height: 200px;
  margin: 0 auto;
  padding: 0;
  text-align: center;
  font-weight: normal;
  position: relative;
  z-index: 5;
}
.lui-changePwd-header-title > img{ max-height: 100%; }
.lui-changePwd-container{}
.lui-changePwd-content{}
.lui-changePwd-step-nav{
  margin: 0 0 10px;
  padding: 10px;
  list-style: none;
  text-align: center;
  font-size: 0;
  white-space: -1px;
}
.lui-changePwd-step-nav:after,
.lui-changePwd-step-nav:before{
  content: '';
  display: block;
  overflow: hidden;
}
.lui-changePwd-step-nav:after{
  clear: both;
}
.lui-changePwd-step-nav > li{
  display: inline-block;
  margin: 0 25px;
  padding: 12px 18px 12px 50px;
  line-height: 20px;
  color: #a7a7a7;
  font-size: 16px;
  border-radius: 25px;
  position: relative;
}
.lui-changePwd-step-nav > li > .num{
  width: 32px;
  height: 32px;
  line-height: 32px;
  text-align: center;
  font-family: Arial;
  font-size: 20px;
  border-radius: 50%;
  border: 3px solid #c9c9c9;
  display: block;
  position: absolute;
  left: 3px;
  top: 50%;
  margin-top: -19px;
}
.lui-changePwd-step-nav > li:after{
  content: '';
  width: 24px;
  height: 24px;
  background: url(../images/changePwd-icon-arrow-R.png) no-repeat 50% 100%;
  display: block;
  position: absolute;
  right: -32px;;
  top: 50%;
  margin-top: -12px;
}
.lui-changePwd-step-nav > li:last-child:after{
  display: none;
}
.lui-changePwd-step-nav > li.active{
  background-color: #7ad2ff;
  color: #fff;
}
.lui-changePwd-step-nav > li.active > .num{
  color: #7ad2ff;
  border-color: #fff;
  background-color: #fff;
}
.lui-changePwd-step-nav > li.active:after{
  background-position: 50% 0;
}
.lui-changePwd-form-box{
  width: 800px;
  margin: 15px auto 30px;
  padding: 30px;
  border-radius: 8px;
  box-shadow: 0 0 20px rgba(240,246,247,.75);
  background-color: #fff;
}
.lui-changePwd-step-nav > li.finish{
  color: #7ad2ff;
}
.lui-changePwd-step-nav > li.finish > .num{
  color: #7ad2ff;
  border-color: #7ad2ff;
}
.lui-changePwd-step-nav > li.finish:after{
  background-position: 50% 0;
}

.personInfoBox .weui_switch input{
  display: none;
  position: absolute;
}
.personInfoBox .weui_switch input+span {
  display: inline-block;
  box-shadow: rgb(223, 223, 223) 0px 0px 0px 0px inset;
  border-color: rgb(223, 223, 223);
  -webkit-transition: border 0.4s, -webkit-box-shadow 0.4s;
  transition: border 0.4s, box-shadow 0.4s;
  background-color: #443c6f;
  width: 134px;
  height: 38px;
  border: 1px solid #dfdfdf;
  border-radius: 20px;
  cursor: pointer;
  display: inline-block;
  position: relative;
  vertical-align: middle;
  box-sizing: content-box;
  background-clip: content-box;
  position: relative;
}
.personInfoBox .weui_switch input+span:after,
.personInfoBox .weui_switch input+span:before,
.personInfoBox .weui_switch input:checked ~small:after,
.personInfoBox .weui_switch input ~small:before {
  content: '';
  display: block;
  width: 30px;
  height: 30px;
  background-image: url(../images/changePwd-icon-sex.png);
  background-repeat: no-repeat;
  position: absolute;
  top: 50%;
  margin-top: -15px;
}

.personInfoBox .weui_switch input+span:before {
  background-position: 0 0;
  left: 20px;
}
.personInfoBox .weui_switch input+span:after {
  background-position: -30px 0;
  right: 20px;
}
.personInfoBox .weui_switch input ~small:before {
  background-position: 0 -30px;
  left: 20px;
}
.personInfoBox .weui_switch input:checked ~small:after {
  background-position: -30px -30px;
  right: 20px;
}
.personInfoBox .weui_switch input:checked ~small:before {
  display: none;
}
.personInfoBox .weui_switch input ~small {
  display: inline-block;
  content: "";
  -webkit-transition: background-color 0.4s, left 0.2s;
  transition: background-color 0.4s, left 0.2s;
  width: 68px;
  height: 38px;
  -webkit-box-shadow: 0 0 2px rgba(0, 0, 0, 0.31);
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.31);
  background: #3cafff;
  border-radius: 20px;
  position: absolute;
  cursor: pointer;
  top: 1px;
  left: 1px;
}
.personInfoBox .weui_switch input:checked+span {
  -webkit-box-shadow: #443c6f 0px 0px 0px 13.5px inset;
  box-shadow: #443c6f 0px 0px 0px 13.5px inset;
  border-color: rgb(223, 223, 223);
  -webkit-transition: border 0.4s, box-shadow 0.4s, background-color 1.2s;
  transition: border 0.4s, box-shadow 0.4s, background-color 1.2s;
  background-color: #443c6f;
}
.personInfoBox .weui_switch input:checked ~small {
  position: absolute;
  left: 68px;
  -webkit-transition: background-color 0.4s, left 0.2s;
  transition: background-color 0.4s, left 0.2s;
  background-color: #fa4b9d;
}
.upload_btn_title{
