.muiFollowFrom span{
	color: #ADE2F5;
}
.muiFollowTime {
	width:9.5rem;
	color: #989898;
}
.muiFollowTime i{
	line-height: 1rem!important;
}
.muiFollowHeader {
	overflow: hidden;
	display: table;
	background-color: #f7f7f7;
	border-bottom: 1px solid #e8e8e8;
}
.muiSearchBar {
	border-left: 1px solid rgba(209,209,209,0.1);
	border-bottom: none;
}
.muiFollowHeader>div {
	display: table-cell;
	
}
.muiFollowItem {
	min-width: 7rem;
	background-color: #f7f7f7;
}
.muiFollowStatusFilter {
	background-color: #fff;
	    padding: 2rem;
}
.muiFollowStatusFilterItem {
	display: inline-block;
	padding: 0.4rem 1rem;
	margin:0 0.4rem;
	color: #5f5f5f;
	font-size:1.4rem;
	border:1px solid #3AB0D6;
	border-radius:2px;
}
.muiFolderRotate135 {
	-webkit-transform : none;
}
.muiFolderRotate {
    -webkit-animation: none;
}

.muiFollowStatusFilter {
	min-height: 1rem;
}

.muiFollowStatuItem {
	width: 100%;
    text-align: center;
    font-size: 1.4rem;
    line-height: 4.2rem;
}
.muiFollowStatuItem .mui {
  font-size: 1.4rem;
  line-height: 1.8rem;
  position: relative;
  top: 0;
  left: .2rem;
}


.muiListItem {
    position: relative;	
	padding-left: 1rem;
	padding-right: 1rem;
}

.muiListItem:after{
    content: " ";
    position: absolute;
    z-index: 2;
    bottom: 0;
    left: 0;
    right: 0;
    border-bottom: .1rem solid #EEEEEE;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);	
}