.formula_content,.condition_content{
}
.setting_del_btn{
	color: #4285f4;
	cursor: pointer;
}
.auth_condition_row{
	padding-bottom: 10px;
    padding-top: 10px;
    border-bottom: 1px solid #d9d9d9;
}
.auth_condition_row:last-child{
	border-bottom: none;
}
.auth_condition_row>label{
	margin-right: 5%;
}
.auth_condition_row>label:last-child{
	margin: 0;
}
.auth_condition_field,.auth_condition_operator,.auth_condition_value .auth_condition_select{
	border: 1px solid #DFE3E9;
    border-radius: 2px;
    height: 30px;
    line-height: 30px;
    padding-left: 0;
    font-size: 12px;
    color: #999999;
}
.auth_condition_field,.auth_condition_value{
	width: 30%;
}
.auth_condition_operator{
	width: 20%
}
.auth_condition_value{
	display: inline-block;
	margin-right: 3%;
}
.auth_condition_value .auth_condition_input{
	outline: none;
    border: 0;
    border-bottom: 1px solid #d9d9d9;
    margin-left: 0;
    border-radius: 2px;
    height: 30px;
    line-height: 30px;
    color: #333333;
}
.auth_condition_btn>img{
	position: relative;
    top: 6px;
}