.lui-media-player-container {
	border: 1px solid #EAEAEC;
	position: relative;
	overflow: hidden;
}

.lui-media-player-play {
	height: 500px;
}

.lui-media-player-playcontainer {
	position: relative;
}

.lui-media-player-play-item {
	height: 500px;
	line-height: 500px;
	text-align: center;
}

.lui-media-player-play-item iframe {
	width: 100%;
	border: none;
}

.lui-media-image-container {
	display: block;
	height: 100%;
}

.lui-media-image-container img {
	max-width: 96%;
	max-height: 96%;
	vertical-align: middle;
}

.lui-media-player-playcontainer .lui-media-arrow {
	display: block;
	bottom: 50px;
	top: 50px;
	z-index: 3;
	position: absolute;
	overflow: hidden;
	width: 150px;
	height: 360px;
}

.lui-media-player-playcontainer .right {
	cursor: url(./img/pic_next.cur), e-resize;
	right: 15px;
}

.lui-media-player-playcontainer .left {
	cursor: url(./img/pic_prev.cur), w-resize;
	left: 0;
}

.lui-media-player-header {
	height: 38px;
	background-color: #F7F6F6;
	line-height: 38px;
	font-size: 16px;
}

.lui-media-player-header .title {
	width: 85%;
    overflow: hidden;
    display: block;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 16px;
    font-weight: 400;
    float:left;
    padding-left: 10px;
}

.lui-media-player-header .preview {
	float: right;
	padding-right: 10px;
	cursor: pointer;
}
.lui-media-player-header .screen {
	position: relative;
    top: 9px;
    right: 20px;
    display: inline-block;
    float: right;
    width: 22px;
    height: 20px;
    background: url(./img/read_fullscreen.png) no-repeat;
    cursor: pointer;
}


.lui-media-player-thumb {
	position: absolute;
    right: 0;
    top: 38px;
    height: 500px;
    z-index: 4;
    position: absolute;
    padding-left: 4px;
    overflow: hidden;
}

/* .lui-media-player-thumb ul li:FIRST-CHILD {
	padding-top: 0;
}
.lui-media-player-thumb ul li:LAST-CHILD {
	padding-bottom: 0;
} */
.lui-media-player-thumb ul li {
	padding: 12px;
}
.lui-media-player-thumb ul li a {
	width: 110px;
    height: 100px;
    position: relative;
    display: inline-block;
    text-align: center;
    
}

.lui-media-player-thumb-item-border {
	border-style: solid;
	border-width: 1px;
	border-color: #EAEAEC;
}

.lui-media-player-thumb-item-border.select {
	border-width: 2px;
	border-color: #47b5e6;
}
.lui-media-player-thumb ul li .big {
	height: 100px;
    max-width: 100%;
    display: inline-block;
}

.lui-media-player-thumb ul li .small {
    position: absolute;
    right: 8px;
    bottom: 10px;
    width: 16px;
    height: 16px;
}

.lui-media-player-thumb-container {
	border-top:1px solid #EAEAEC;
	border-left:1px solid #EAEAEC;
	border-bottom:1px solid #EAEAEC;
    position: relative;
    right: -136px;
    top: 0;
    height: 481px;
    bottom: 20px;
    width: 136px;
    background-color: #fff;
    box-shadow: -2px 2px 2px rgba(0, 0, 0, .125);
    display: none;
}

.lui-media-player-thumb-container .slide-container {
    position: absolute;
    top: 45px;
    bottom: 45px;
    right: 0;
    overflow: hidden;
    width: 138px;
}

.lui-media-player-thumb-container .slide-inner {
	position: absolute;
}
.lui-media-player-thumb-container .btn {
	width: 25px;
	height: 25px;
	position: absolute;
	right: 57px;
	background-repeat: no-repeat;
    background-size: cover;
    cursor:pointer;
}
.lui-media-player-thumb-container .top-btn {
    top: 6px;
    background-image: url("./img/top.png");
}
.lui-media-player-thumb-container .bottom-btn {
    bottom: 6px;
    background-image: url("./img/bottom.png");
}