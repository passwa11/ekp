.muiExpertNode {
    position: relative;
    height: 6rem;
    padding-left: 6rem;
}
.muiExpertIcon {
    position: absolute;
    width: 3.5rem;
    height: 3.5rem;
    left: 1rem;
    top: 1rem;
}
.muiExpertIcon img{
	border-radius : 50%;
	width:100%;
	height:100%;
}
.muiExpertDetail {
	list-style: none;
	height: 99%;
	border-bottom: 1px solid #EAEBF0;
}
.muiExpertName {
}
.muiExpertDep {
}
.muiExpertSummary p{
	color: #5A5A5A;
	font-size: 1.5rem;
	overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.muiExpertDetail li:FIRST-CHILD {
	padding-top: .8rem;
    padding-bottom: .2rem;
}
.muiExpertAskBtn {
	width: 6rem;
	height: 2.3rem;
	position: absolute;
	color: var(--muiFontColorMuted);
    font-size: var(--muiFontSizeXS);
    border-radius: 1.5rem;
    line-height: 2.3rem;
    border: 1px solid #EAEBF0;
    top: 1.5rem;
    right: 1rem;
    text-align: center;
}