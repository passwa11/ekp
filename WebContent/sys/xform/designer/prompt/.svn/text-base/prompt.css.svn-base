@charset "utf-8";


/* 提示框 Starts
   ========================================================================== */
.lui_prompt_tooltip{
  margin: 0 5px;
  display: inline-block;
  position: relative;
}

.lui_mobile_tooltip{
	/* float : right; */
	margin-right : 1rem;
	margin-left : 0px !important;
}

.lui_prompt_tooltip_drop{
  width: 16px !important;
  height: 16px;
  vertical-align: middle;
  display: inline-block;
  cursor: pointer;
}

.detailTableSimple .detailTableSimpleTd .detail_statistic label.lui_prompt_tooltip_drop{
  width: 16px !important;
}

.lui_prompt_tooltip_drop > img{
  width: 100%;
  height: 100%;
}

.mui_prompt_tooltip_drop{
  padding-bottom : 1rem; 
}


.lui_dropdown_tooltip_menu{
 /*  display: none; */
  padding: 10px;
  width: 220px;
 /*  height: 50px; */
 /*  border: 1px solid #ccc; */
  border: 1px solid rgba(0, 0, 0, .15);
  border-radius: 4px;
  background-color: #fff;
  -webkit-box-shadow: 0 0 12px rgba(0, 0, 0, .175);
          box-shadow: 0 0 12px rgba(0, 0, 0, .175);
  position: absolute;
  bottom: 26px;
  left: 50%;
  margin-left: -121.5px;
  margin-bottom : -3px;
  white-space : normal !important;
  
}

.lui_dropdown_tooltip_menu a{
	color:#1b83d8;
}

.lui_dropdown_tooltip_menu:after,
.lui_dropdown_tooltip_menu:before{
  content: '';
  display: inline-block;
  width: 0;
  height: 0;
  vertical-align: middle;
  border-top: 8px dashed;
  border-top: 8px solid \9;
  border-right: 10px solid transparent;
  border-left: 10px solid transparent;
  position: absolute;
  left: 50%;
  margin-left: -10px;
  bottom: 0;
}
.lui_dropdown_tooltip_menu:after{
  color: #fff;
  bottom: -7px;
}
.lui_dropdown_tooltip_menu:before{
  color: #ccc;
  color: rgba(0, 0, 0, .1);
  bottom: -8px;
}

