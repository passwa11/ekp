/*表格无框线*/
.tb_normal_noborder {
	width:100%;
	text-align: left; 
	padding: 8px !important; 
	margin: 0px auto; 
	border: 0; 
	border-collapse: collapse; 
	background-color: rgb(255, 255, 255);
	word-break:keep-all; 
}
.tb_normal_noborder   tr  td { 
	padding: 8px; border: 1px #d2d2d2 solid;
	word-break: break-all; 
	border-left:0px;
}
.tb_normal_noborder tr td:last-child{
	border-right:0px;
}
.tb_normal_noborder > tbody >tr > .td_normal_title {
	background-color:#f6f6f6!important;
}

