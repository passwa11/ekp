/*****滚动条样式覆盖开始*****/
div.record_data::-webkit-scrollbar{
    width:8px;
    height:8px;
    background-color: #d1d1d1;
    -webkit-transition: background-color .3s ease-in-out;
    transition: background-color .3s ease-in-out;
}
div.record_data::-webkit-scrollbar:hover{
    background-color:#d1d1d1;
}
div.record_data::-webkit-scrollbar-thumb{
    background-color:#d1d1d1;
    height:50px;
    outline-offset:-1px;
    outline:1px solid #fff;
    -webkit-border-radius:5px;
    border-radius:5px;
    border-right: 1px solid #fff;
    border-left: 1px solid #fff;
    -webkit-transition: background-color .3s ease-in-out;
    transition: background-color .3s ease-in-out;
}
div.record_data::-webkit-scrollbar-thumb:hover,
div.record_data::-webkit-scrollbar-thumb:active{
    background-color:#9c9c9c;
    border-right: 1px solid #f1f1f1;
    border-left: 1px solid #f1f1f1;
}
div.record_data::-webkit-scrollbar-track{
    background-color:#fff;
}
div.record_data::-webkit-scrollbar-track:hover{
    background-color:#f1f1f1;
    -webkit-box-shadow: inset 0 0 3px rgba(0,0,0,.15);
    box-shadow: inset 0 0 3px rgba(0,0,0,.15);
}
/*****滚动条样式覆盖结束*****/