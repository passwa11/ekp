div.record_icon{
	position: absolute;
    top: 0;
    right: 0;
    width: 0;
    height: 0;
    border-top: 6px solid #D3D3D3;
    border-right: 6px solid #D3D3D3;
    border-left: 6px solid transparent;
    border-bottom: 6px solid transparent;
    cursor: pointer;
}
div.record_data{
	position:absolute;
	top:5px;
	right:5px;
	width: 206px;
    background: #FFFFFF;
    border: 1px solid #F1F1F1;
    box-shadow: 0 0 4px 0 rgba(231,231,231,0.50);
    border-radius: 4px;
    z-index: 5;
    max-height: 480px;
    overflow: auto;
}
div.record_data.hide{
	display:none;
}
div.record_data ul{
	list-style: none;
	margin: 12px;
	margin-bottom: 0;
}
div.record_data ul li{
	position: relative;
}
div.record_data ul li:before{
	content: '';
    width: 1px;
    height: 100%;
    background: #F1F1F1;
    position: absolute;
    left: 3px;
    top:2px;
}
div.record_data ul li.lastChild:before{
	display: none;
}
div.record_data li div.head{
	position: relative;
	font-size: 12px;
	color: #999999;
	line-height: 12px;
}
div.record_data li div.head i{
	width: 7px;
    height: 7px;
    border-radius: 50%;
    background: #D8D8D8;
    float: left;
    margin-top: 2px;
    margin-right: 16px;
}
div.record_data ul li.firstChild div.head i{
	background:#4285f4;
}
div.record_data li div.head{
	text-align: left;
}
div.record_data li div.content{
	padding-left: 23px;
	font-size: 14px;
	line-height: 20px;
	color: #999999;
	padding-top:10px;
	padding-bottom:20px;
	text-align: left;
	position: relative;
}
/* div.record_data li div.content span{
	display: inline-block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
} */
div.record_data li div.content .item{
	color: #333333;
	/* width:56px; */
}
div.record_data li div.content i.more{
	display:inline-block;
	width:14px;
	height:20px;
	background:url("../images/open.png") center no-repeat;
	background-size: contain;
	position: absolute;
	right: 5px;
	cursor: pointer;
}
div.record_data li div.content i.more.active{
	background:url("../images/close.png") center no-repeat;
	background-size: contain;
}
