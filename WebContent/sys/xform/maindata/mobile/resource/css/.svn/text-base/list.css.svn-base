@CHARSET "UTF-8";

.muiMainDataHeaderBanner{
    padding-top: 2.5rem;
    padding-bottom: 2.5rem;
}
.muiMainDataHeaderBannerFix{
	position: fixed;
    top: 0;
    height: 4rem;
    line-height: 4rem;
    width: 100%;
    color: #fff;
    transform: translate3d(0, 0, 0);
    -webkit-transform: translate3d(0,0,0);
}
.muiMainDataHeaderBanner,
.muiMainDataHeaderBannerFix{
	background-image: -webkit-linear-gradient(left, #019bfd 0%, #037ef3 100%);
    background-image: -moz-linear-gradient(left, #019bfd 0%, #037ef3 100%);
    background-image: -ms-linear-gradient(left, #019bfd 0%, #037ef3 100%);
    background-image: -o-linear-gradient(left, #019bfd 0%, #037ef3 100%);
    background-image: linear-gradient(left, #019bfd 0%, #037ef3 100%);
    text-align: center;
}
.muiMainDataHeaderBanner .muiBannerLogo{
	width: 5.5rem;
    height: 5.5rem;
    border: 0.3rem solid #6dc1ee;
    border-radius: 50%;
    overflow: hidden;
    display: inline-block;
    margin-bottom: 1rem;
}
.muiMainDataHeaderBanner .muiBannerLogo > img{
	width : 100%;
	height: 100%;
}
.muiMainDataHeaderBanner > p{
	color: #fff;
   	font-size: 1.8rem;
}

.muiMainDataHeader.muiHeader .muiHeaderItem{
	display: block;
	background-color: transparent;
}

.muiMainDataHeaderContent{
	border-bottom: 0.1rem solid #e5e5e5;
    padding:1.5rem 1rem 1.5rem;
    background-color: #fff;
}
.muiMainDataHeaderContent ul {
    list-style: none;
}
.muiMainDataHeaderContent ul li {
    line-height: 3rem;
    font-size: 1.6rem;
    color: #333;
}
.muiMainDataHeaderContent .muiMainDataLabel {
    color: #999;
}
.muiMainDataMore {
    color: #1495f4;
    font-size: 1.4rem;
    margin: 0.5rem auto;
    display: block;
    text-align: center;
}
.muiHeaderMoreDatasContent{
	display: none;
}
