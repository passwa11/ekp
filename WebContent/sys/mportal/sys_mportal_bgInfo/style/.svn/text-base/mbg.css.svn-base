.lui_mportal_bgcontainer {
	width: 100%;
	margin-top: 20px;
}

.lui_mportal_bgcontainer>div {
	margin: 0 auto;
	width: 846px;
	padding: 25px 0;
}

.lui_mportal_bgcontainer>div a {
	position: relative;
	margin: 6px;
	width: 180px;
    height: 320px;
	display: inline-block;
	line-height: 73px;
	padding:5px;
	border:1px solid #d9d9d9;
}

.lui_mportal_bg {
	  width: 100%;
  height: 100%;
  vertical-align: middle;
  background-size: cover;
}

.selected .lui_mportalbg_tag {
	top: 5px;
	right: 5px;
	height: 30px;
	width: 30px;
	background-color: transparent;
	background: url("./cur_bg.png") no-repeat;
	position: absolute;
	z-index: 1;
	border-radius: 2px;
	line-height: 22px;
	text-align: center;
}
.lui_mportal_bgLogo {
	width: 100%;
    display: block;
    text-align: center;
    line-height: 50px;
}
.lui_mportal_bgLogo img {
	width: 90px;
  height: 13px;
}
.lui_mportal_bgInput {
	background-color: #fff;
	width: 88%;
	height:18px;
	margin: 0 auto;
}

.lui_mportal_bgMenu li {
	width: 39px;
  float: left;
  display: block;
  text-align: center;
  line-height: 40px;
}
.lui_mportal_bgMenu {
  list-style: none;
  overflow: hidden;
  width: 88%;
  margin: 0 auto;
  padding-top:5px;
  color: #fff;
}
.lui_mportal_bgMenuIcon  {
	 font-size: 19px!important;
    line-height: 35px!important;
    display: block!important;
}
.lui_mportal_bgMenuText {
	font-size: 10px!important;
	line-height: 12px!important;
	display: block!important;
}