.muiModuleHeader {
	position: relative;
	opacity: 0.9;
}

.muiModuleHeaderInfoContainer{
    padding: 2.5rem 1.25rem;
}

.muiModuleHeaderInfo {
	position: relative;
    color: #000;
    height: 5rem;
    line-height: 5rem;
}

.muiModuleHeaderInfo>div.muiModuleHeaderPersonIcon{
    position: absolute;
    top: 0;
    left: 0;
    height: 5rem;
    line-height: 5rem;
}
.muiModuleHeaderInfo>div.muiModuleHeaderLinkIcon{
    position: absolute;
    top: 0;
    right: 0;
    height: 5rem;
    line-height: 5rem;
}
.muiModuleHeaderName {
	font-weight: bold;
	color: #2A304A;
}

.muiModuleHeaderName>.muiModuleWelcomeMessage>span {
	font-size: 1.4rem;
    display: inline-block;
    vertical-align: bottom;	
}
.muiModuleHeaderName>.muiModuleWelcomeMessage>span:first-child{
	overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 20rem;
}

.muiModuleHeaderName.noPersonSignature>.muiModuleWelcomeMessage>span:first-child {
	font-size: 2.1rem;
}

.muiModuleHeaderName.hasPersonSignature>.muiModuleWelcomeMessage{
	height: 1.8rem;
    line-height: 1.8rem;
}
.muiModulePersonSignature{
	margin-top: .8rem;
	color: var(--muiFontColorInfo);
    font-size: var(--muiFontSizeMA);
    height: 2rem;
    line-height: 2rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;    
}

.muiModuleHeaderCard {
	background: #FFFFFF;
	box-shadow: 0 0 30px 0 rgba(153, 179, 210, 0.20);
	border-radius: 6px;
	overflow: hidden;
	z-index:2;
	position: relative;
	margin:0 1.25rem;
}

.muiModuleHeaderContainer {
	position: relative;
	min-height: 13rem;
	background-color: #fff;
	padding-bottom: 1rem;
}

.muiModuleHeaderInfo>.muiModuleHeaderPersonIcon>img{
	border-radius: 50%;
	height: 4rem;
	width: 4rem;
	background-color: #f8f8f8;
}

.muiModuleHeaderInfo>.muiModuleHeaderPersonIcon~.muiModuleHeaderName{
	padding-left: 5rem;
}
.muiModuleHeaderInfo>.muiModuleHeaderLinkIcon~.muiModuleHeaderName{
    padding-right: 1.6rem;
}


.muiModuleHeaderInfo>.muiModuleHeaderPersonIcon~.muiModuleHeaderName>.muiModuleWelcomeMessage>span:first-child{
	font-size: 1.4rem;
}

.muiModuleHeaderBg{
	position: absolute;
	top: 0;
	width: 100%;
	height: 13rem;
	box-sizing: border-box;
	padding: 1.25rem;
}

