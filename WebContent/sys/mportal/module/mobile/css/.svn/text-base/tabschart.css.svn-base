.muiTabsChartTabContainer{
   text-align: right;
}

.muiTabsChartTabContent{
	display: inline-block;
    margin-right: 1rem;
    margin-top: 1rem;
	border-radius: 1rem;
	border: .1rem solid #D8D8D8;
}

.muiTabsChartTabContainer .tabsChartTab{
	display: inline-block;
	padding: 1rem 2rem;
	font-size: var(--muiFontSizeS);
	color: var(--muiFontColorMuted);
}
.muiTabsChartTabContainer .tabsChartTab:first-child{
    border-top-left-radius: .9rem;
    border-bottom-left-radius: .9rem;
}
.muiTabsChartTabContainer .tabsChartTab:last-child{
    border-top-right-radius: .9rem;
    border-bottom-right-radius: .9rem;
}
.muiTabsChartTabContainer .tabsChartTab:not(:first-child){
	border-left: .1rem solid #D8D8D8;
}

.muiTabsChartTabContainer .tabsChartTab.active{
   color: #FFFFFF;
   background-color: var(--muiFontColor);
}