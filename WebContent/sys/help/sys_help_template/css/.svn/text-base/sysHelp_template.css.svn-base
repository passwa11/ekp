html, body {
    margin: 0;
    height: 100%;
}

.template_title_block {
    text-align: center;
    margin-bottom: 10px;
}

.template_title {
    position: absolute;
    font-size: 16px;
    line-height: 50px;
    padding-left: 35px;
    z-index: 2;
    font-weight: bold;
}
.template_title:before{
    content:"";
    display:inline-block;
    width: 20px;
    height: 20px;
    background: url(../image/icon_home@2x.png) no-repeat center;
    background-image:url(../image/icon_home.png)\9;
    vertical-align: -5px;
    background-size: 18px auto;
}

.template_docContent {
    width: 100%;
    height: 100%;
}

.help-body {
}

.help-tabItem {
    display: inline-block;
    width: 150px;
    height: 50px;
    line-height: 50px;
    padding: 0!important;
    color: #fff;
    font-size: 16px;
    text-align: center;
    cursor: pointer;
}

.next-box {
    height: 50px;
    text-align: center;
}

.next-box .active {
    background: #252525;
}

.help-content-item {
    height: 100%;
    display: none;
    background: url(../image/mainbg.png) no-repeat center;
    background-size: cover;
}

.help-content-item-info {
    height: 100%;
}

.help-content-item-buzImg {
    display: inline-block;
    text-align: center;
    width: 100%;
}

/* 帮助中心页面调整  */
.help-iframe [data-lui-type="lui/panel!TabPanel"]{
    width:100%!important;
    margin-left:0!important;
}
.help-iframe {
    background: rgba(50, 50, 50, .3);
    background-size: cover;
    color: #fff;
}

.help-iframe .lui_tabpanel_light_navs_item_c .lui_tabpanel_navs_item_title {
    font-size: 18px;
    color: #fff;
    /* color: rgba(255, 255, 255, .8); */
}

.help-iframe .lui_tabpanel_light_navs_item_l.lui_tabpanel_light_navs_item_selected .lui_tabpanel_navs_item_title {
    color: #fff;
    font-weight: normal;
}

.help-iframe .lui_tabpanel_light_navs_l {
    height: 50px;
    line-height: 50px;
    background: url(../image/mainbg.png) no-repeat right top;
    background-size: cover;
}

.help-iframe .lui_tabpanel_light_navs_r {
    background: #303735;
    background: rgba(50, 50, 50, .5);
}

.help-iframe .lui_tabpanel_light_navs_item_l {
    text-align: center;
    float: none;
    display: inline-block;
    height: 50px;
    line-height: 50px;
}

.help-iframe .lui_tabpanel_light_navs_item_c {
    height: 50px;
    line-height: 50px;
    width: 170px;
}

.help-iframe .lui_tabpanel_light_navs_c {
    background: none;
    border-bottom: none;
    height: 50px;
    line-height: 50px;
    padding-left: 0;
}

.help-iframe .lui_tabpanel_light_navs_item_selected .lui_tabpanel_light_navs_item_c {
    border: none;
    background: #2c2d30;
    background: rgba(27, 27, 27, .4);
    color: #fff;
}

.help-iframe [data-lui-type='lui/panel!Content'] {
    padding: 0;
}

html{
    overflow-y:hidden;
    position:relative;
}
/* iframe */
iframe#scenseExperenceIframe{
    position:absolute;
    left:0;
    top:50px;
    bottom:0;
    right:0;
    overflow: auto;
}