/*只有自定义表单移动设计器使用*/
.muiFormUploadWrap,
.muiFormUploadWrap + .muiFormEleWarning{
	padding-right: 2rem;
	position:relative;
}
.muiFormUploadHeading {
	line-height: 3rem;
	height: 3rem;
	position: relative;
	display: flex;
}
.muiFormUploadTitle {
	display: inline-block;
	color: var(--muiFontColorInfo);
	font-size: var(--muiFontSizeMS);
	flex:1;
}
.muiFormUploadBody {
	padding: 0 1.2rem;
}
.muiFormUploadHeading .mui-upload {
	float: right;
	line-height: 40px;
	color: #d5d5d5;
	font-size: 1.8rem;
}
.muiFormUploadWrap:after,
.muiFormUploadBody:after {
  content: '';
  display: table;
  visibility: hidden;
  clear: both;
}
.muiAttachmentUploadFile {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	width: 100%;
	height: 100%;
	opacity: 0;
	z-index:9;
}
.muiFormUploadWrap .mui-close:before {
	transform: scale(0.7);
	-webkit-transform: scale(0.7);
	display: inline-block;
}
.muiFormUploadWrap .muiAttachmentEditItem {
	margin-top: 1.4rem;
	margin-bottom: 2.8rem;
}
 .muiAttachmentItemText {
	font-size: 1.2rem;
	color: #666;
	margin-top: 0.7rem;
	text-align: center;
}

.muiAttachmentItemTV{
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
}

.muiAttachmentItemTVIcon{
	height: 100%;
	width: 100%;
    text-align: center;
    vertical-align: middle;
    line-height: 3rem;
    color: #C7C7CC;
}

.muiFormUploadWrap .muiAttachmentEditItem.muiAttachmentEditVOptItem{
	width: 3rem;
	height: 3rem;
	border: 1px solid #D2D2D2;
	border-radius: 4px;
	margin-bottom: 0;
	float: none;
	margin-top: 0rem;
}

.muiAttachmentEditItem{
	width: 6rem;
}