.muiSwitch{
	position: relative;
    display: inline-block;
    min-width: 4.8rem;
    height: 2.4rem;
    border-radius: 1.7rem;
    border: none;
}

.muiSwitch.muiSwitchOn{
	background-color: #4285F4;
}

.muiSwitch.muiSwitchOff{
	background-color: #C1C1C1;
}

.muiSwitch.muiSwitchDisabled.muiSwitchOn{
    opacity: 0.2;
}

.muiSwitch.muiSwitchDisabled.muiSwitchOff{
	opacity: 0.4;
}

.muiSwitch .muiSwitchKnob{
    position: absolute;
    display: inline-block;
    top: .3rem;
    width: 1.8rem;
    height: 1.8rem;
    border-radius: 50%;
    background-color: #FFFFFF;
    border: none;
    transition: all .3s;
}

.muiSwitch.muiSwitchOn .muiSwitchKnob{
	right: .3rem;
}

.muiSwitch.muiSwitchOff .muiSwitchKnob{
	right: calc(100% - 2rem);
}

.muiSwitch .muiSwitchText{
	color: #FFFFFF;
	height: 2.4rem;
    line-height: 2.4rem;
    font-size: var(--muiFontSizeMS);
}

.muiSwitch.muiSwitchOn .muiSwitchLeftText{
	display: block;	
	text-align: left;
    padding-left: .6rem;
    padding-right: 2.6rem;
}

.muiSwitch.muiSwitchOn .muiSwitchRightText{
	display: none;
}

.muiSwitch.muiSwitchOff .muiSwitchLeftText{
	display: none;
}

.muiSwitch.muiSwitchOff .muiSwitchRightText{
	display: block;
	text-align: right;
	padding-left: 2.6rem;
    padding-right: .6rem;
}

.muiNewSwitch.muiFormEleWrap.muiFormStatusNoshow{
	display: none;
}