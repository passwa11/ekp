.lui_prompt_tooltip{
  margin: 0 5px;
  display: inline-block;
  position: relative;
}

.lui_mobile_tooltip{
	/* float : right; */
	margin-right : 1rem;
	margin-left : 0px !important;
}

.lui_prompt_tooltip_drop{
  width: 16px !important;
  height: 16px;
  vertical-align: middle;
  display: inline-block;
  cursor: pointer;
}

.detailTableSimple .detailTableSimpleTd .detail_statistic label.lui_prompt_tooltip_drop{
  width: 16px !important;
}

.lui_prompt_tooltip_drop > img{
  width: 100%;
  height: 100%;
}

.mui_prompt_tooltip_drop{
  padding-bottom : 1rem; 
}


.lui_dropdown_tooltip_menu{
  padding: 10px;
  border: 1px solid rgba(0, 0, 0, .15);
  border-radius: 4px;
  background-color: #fff;
  -webkit-box-shadow: 0 0 12px rgba(0, 0, 0, .175);
          box-shadow: 0 0 12px rgba(0, 0, 0, .175);
  position: absolute;
  bottom: 30px;
  margin-bottom : -3px;
  left: -5px;
  white-space : normal !important;
  /* #144403-主表中添加表格，提示控件右侧会被边界挡住内容 */
  max-width: 150px;
  font-size: 1.4rem;
  color: #fff;
  background-color: rgba(50, 50, 50 ,0.8);
}

.lui_dropdown_tooltip_menu a{
	color:#1b83d8;
}

.lui_dropdown_tooltip_menu:before{
  content: '';
  display: block;
  width: 0;
  height: 0;
  vertical-align: middle;
  border-top: 8px dashed rgba(50, 50, 50 ,0.8);
  border-right: 8px solid transparent;
  border-left: 8px solid transparent;
  position: absolute;
  left: 17px;
  margin-left: -10px;
  bottom: 0;
}
.lui_dropdown_tooltip_menu:before{
  color: #ccc;
  color: rgba(0, 0, 0, .1);
  bottom: -8.5px;
}

/*           三角形向上                                          */
.lui_dropdown_tooltip_menu_totop{
 /*  display: none; */
  padding: 10px;
  width: 220px;
 /*  height: 50px; */
 /*  border: 1px solid #ccc; */
  border: 1px solid rgba(0, 0, 0, .15);
  border-radius: 4px;
  background-color: #fff;
  -webkit-box-shadow: 0 0 12px rgba(0, 0, 0, .175);
          box-shadow: 0 0 12px rgba(0, 0, 0, .175);
  position: absolute;
  top: 24px;
  left: 50%;
  margin-left: -121.5px;
  margin-bottom : -3px;
  
}

.lui_dropdown_tooltip_menu_totop a{
	color:#1b83d8;
}

.lui_dropdown_tooltip_menu_totop:after,
.lui_dropdown_tooltip_menu_totop:before{
  content: '';
  display: inline-block;
  width: 0;
  height: 0;
  vertical-align: middle;
  border-bottom: 8px dashed;
  border-bottom: 8px solid \9;
  border-right: 10px solid transparent;
  border-left: 10px solid transparent;
  position: absolute;
  left: 50%;
  margin-left: -10px;
  bottom: 0;
}
.lui_dropdown_tooltip_menu_totop:after{
  color: #fff;
  top: -7px;
}
.lui_dropdown_tooltip_menu_totop:before{
  color: #ccc;
  color: rgba(0, 0, 0, .1);
  top: -8px;
}
/*           三角形向上                                          */

/*           三角形居左10%          */
.lui_dropdown_tooltip_menu_toleft{
  margin-left: -25px;
  
}

.lui_dropdown_tooltip_menu_toleft a{
	color:#1b83d8;
}

.lui_dropdown_tooltip_menu_toleft:after,
.lui_dropdown_tooltip_menu_toleft:before{
  left: 10%;
}
/*           三角形居左10%          */

/*           三角形居右10%          */
.lui_dropdown_tooltip_menu_toright{
  margin-left: -180px;
  
}

.lui_dropdown_tooltip_menu_toright a{
	color:#1b83d8;
}

.lui_dropdown_tooltip_menu_toright:after,
.lui_dropdown_tooltip_menu_toright:before{
  left: 75%;
}
/*           三角形居右10%          */

