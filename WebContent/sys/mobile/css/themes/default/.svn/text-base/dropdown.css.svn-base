.muiDropDownList>li.active {
	color: #4285f4;
}
.muiDropDownList .mui-checked {
	float: right;
	margin-top: 1rem;
}
.muiDropDownList.single .mui-checked {
  display: none;
}
.muiDropDownList.single>li.active .mui-checked {
  display: block;
}
.muiDropDownList.mult .mui-checked {
	float: left;
	margin-top: 1.1rem;
}

/*点击动画效果*/
.muiDropDownList>li:active:after {
  content: '';
  width: 100%;
  height: 4rem;
  border-radius: 50%;
  background-color: #f7f7f7;
  display: block;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -2rem;
  margin-top: -2rem;
  z-index: -1;
  opacity: .75;
  -webkit-transform: scale(4);
          transform: scale(4);
  -webkit-animation: zoomIn .2s ease-in-out 0s 1 both;
          animation: zoomIn .2s ease-in-out 0s 1 both;
}
@-webkit-keyframes zoomIn {
  from {
    opacity: 0;
    -webkit-transform: scale3d(.3, .3, .3);
    transform: scale3d(.3, .3, .3);
  }

  50% {
    opacity: 1;
  }
}
@keyframes zoomIn {
  from {
    opacity: 0;
    -webkit-transform: scale3d(.3, .3, .3);
    transform: scale3d(.3, .3, .3);
  }

  50% {
    opacity: 1;
  }
}