.muiDropDownWrap {
	font-size: 1.4rem;
	position: relative;
	display: inline-block;
}
button.muiDropDownIcon,
button.muiDropDownText {
	border: none;
	background-color: #fff;
	height: 3.6rem;
	line-height: 3.6rem;
	color: #333;
}
button.muiDropDownIcon {
	background-color: #4285f4;
	color: #fff;
	width: 3.6rem;
	height: 3.6rem;
	font-size: 1.8rem;
	border-radius: 0.4rem;
}
.muiDropDownText {
	position: relative;
	box-sizing: border-box;
	padding: 0 2rem 0 0.5rem;
}
.muiDropDownText:after {
	content: '';
    width: 0;
    height: 0;
    border-left: 0.5rem solid transparent;
    border-right: 0.5rem solid transparent;
    border-top: 0.5rem solid #333;
    position: absolute;
    top: 50%;
    margin-top: -0.3rem;
    right: 0.5rem;
}
.muiDropDownList {
	list-style-type: none;
	position: absolute;
	background-color: #fff;
	z-index: 3;
	width: 100%;
	color: #999;
	box-shadow:0 2px 4px 0 rgba(0,0,0,0.12), 0 0 6px 0 rgba(0,0,0,0.04);
}
.muiDropDownList>li {
	height: 3.6rem;
	line-height: 3.6rem;
	padding: 0 1.5rem;
	position: relative;
	overflow: hidden;
	font-size: 1.4rem;
	/*border-bottom: 1px solid #e7e7e7;*/
}
