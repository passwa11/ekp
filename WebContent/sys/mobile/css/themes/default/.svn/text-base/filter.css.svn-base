.muiFilterStateList:after {
  content: '';
  display: table;
  visibility: hidden;
  clear: both;
}

.muiFilterPanel {
	position: relative;
	height: 100%;
}
.muiFilterHeading {
	position: relative;
	height: 4rem;
	padding: 0 1.2rem;
	border-bottom: 1px solid #e5e5e5;
}
.muiFilterTitle {
	font-size: 1.4rem;
	color: #666;
	line-height: 4rem;
	float: left;
	margin-right: 1.2rem;
}
.muiFilterPath {
	float: left;
	line-height: 4rem;
}
.muiFilterRight {
	position: absolute;
	right: 1.2rem;
	top: 0;
	bottom: 0;
	color: #aaa;
	line-height: 4rem;
}
.muiFilterPanel section .mui-forward {
	transition: transform 0.3s;
	-webkit-transition: transform 0.3s;
}
.muiFilterPanel section.active .mui-forward {
 	transform: rotate(-90deg);
	-webkit-transform:rotate(-90deg); 
	transition: transform 0.3s;
	-webkit-transition: transform 0.3s;
}
.muiFilterPanel section .mui-forward {
	transform: rotate(-180deg);
	-webkit-transform:rotate(90deg); 
	transition: transform 0.3s;
	-webkit-transition: transform 0.3s;
}
.muiFilterBody {
	background-color: #F6FAFC;
	border-bottom: 1px solid #e5e5e5;
}
.muiFilterStateList {
	list-style-type: none;
	padding: 1rem 0 0 1.5rem;
}
.muiFilterStateList>li {
	float: left;
	padding: 0 0.6rem 1rem 0;
}
.muiFilterStateList>li>span {
	display: block;
	min-width: 7rem;
	height: 3rem;
	box-sizing: border-box;
	border: 1px solid #aaa;
	border-radius: 0.5rem;
	text-align: center;
	line-height: 3rem;
	font-size: 1.3rem;
	color: #666;
	padding: 0 1rem;
}
.muiFilterStateList>li.active>span {
	border: 1px solid #4285f4;
	color: #0D93D6;
	background-color: #caecf8;
}
.muiFilterPanelFooter {
	height: 4rem;
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: #fff;
	border-top: 1px solid #E5E5E5;
}
.muiFilterPanelBtnWrap {
	float: right;
}
.muiFilterPanelFooter button {
	font-size: 1.4rem;
	min-width: 6rem;
	height: 2.7rem;
	color: #0D93D6;
	border: 1px solid #4285f4;
	background-color: #fff;
	border-radius: 2px;
	margin-top: 6px;
	margin-right: 2rem;
	float: left;
}
.muiFilterPanelFooter button.active {
	color: #fff;
	background-color: #4285f4;
}

@media screen and (-webkit-min-device-pixel-ratio: 2) {
	.muiFilterPanelFooter {
		border-top: none;
		background-repeat: repeat-x;
		background-size: 100% 1px;
		background-position: left top;
		background-image: -webkit-gradient(linear, left bottom, left top, color-stop(0.5, transparent), color-stop(0.5, #E5E5E5), to(#E5E5E5));
	}
	.muiFilterHeading,
	.muiFilterBody {
		border-bottom: none;
		background-repeat: repeat-x;
		background-size: 100% 1px;
		background-position: left bottom;
		background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0.5, transparent), color-stop(0.5, #E5E5E5), to(#E5E5E5));
	}
	.muiFilterPanelFooter button,
	.muiFilterStateList>li>span,
	.muiFilterStateList>li.active>span {
		border: none;
		position: relative;
	}
	.muiFilterPanelFooter button:after,
	.muiFilterStateList>li>span:before,
	.muiFilterStateList>li.active>span:before {
		content: "";
		width: 200%;
		height: 200%;
		position: absolute;
		top: 0;
		left: 0;
		border-radius: 0.5rem;
		border: 1px solid #aaa;
		-webkit-transform: scale(0.5);
						transform: scale(0.5);
		-webkit-transform-origin: 0 0;
						transform-origin: 0 0;
		padding: 1px;
		-webkit-box-sizing: border-box;
						box-sizing: border-box;
	}
	.muiFilterStateList>li.active>span:before {
		border: 1px solid #4285f4;
	}
	.muiFilterPanelFooter button:after {
		border: 1px solid #4285f4;
	}
}