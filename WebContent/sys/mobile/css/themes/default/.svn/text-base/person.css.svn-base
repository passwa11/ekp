/** 简要CSS **/
.personContainer{
	min-height: 60px;
}

/* #88397 修复人员名称过长 */
.personContainer .staffCell{
    position:relative;
    padding-left:2.5rem;
    margin:5px;
}
.personContainer .staffCell span:first-child{
    position: absolute;
    left:0;
    top:0;
}

.personContainer .staffCell .name{
    height:auto;
    text-align:left;
}


.personContainer strong{
	position: absolute;
	left: 0px;
	top: 0px;
	display: inline-block;
	color: #898989;
	font-size: 1.4rem;
	padding-top: 1.5rem;
	padding-left: 0.8rem;
	padding-right: 1.5rem;
}
.personContainer .personList{}

.personContainer .staffCell {
	display: inline-block;
	float: left;
	margin-right: 1.4rem;
	text-align: center; 
	background-color:#e6f4fc;
	border-radius:1.4rem;
}
.personContainer .staffCell:after {
	content: '';
	display: table;
	visibility: hidden;
	clear: both;
}

@media screen and (min-width: 321px) and (max-width: 400px) {
	.personContainer .staffCell {
		margin-right: 1.4rem;
		margin-top:1rem;
	}
}

.personContainer .staffCell img,.personContainer .staffCell span {
	width: 2.4rem;
	height: 2.4rem;
	border-radius: 50%;
}
.personContainer .staffCell span{
	position:relative;
	top:0.1rem;
}

.personContainer .staffCell .name {
	display: block;
	font-size: 1.2rem;
	line-height:2.4rem;
	width: auto;
	word-break: break-all;
	float:right;
	color:#666;
	margin:0rem 0.6rem 0rem 0.6rem;
}

.personContainer .staffCell .more {
	display: inline-block;
	width: 2.4rem;
	height: 2.4rem;
	line-height: 2.4rem;
	border-radius: 50%;
	background: #6fc13a;
	color: #fff;
	font-size: 1.2rem;
	text-align: center;
}

.personTotal{
	margin-top:5px;
	text-align: center;
}

/** 详情CSS **/
.personHeader {
	width: 100%;
	display: inline-table;
	border-bottom: 0.1rem solid #C9D7E0;
	background-color: #18b4ed!important;
	color: #fff;
	table-layout: fixed;
}

.personHeader > div {
	display: table-cell;
	vertical-align: middle;
	overflow: hidden;
}

.personHeaderReturn {
	padding-left: 1rem;
	color: #fff;
	cursor: pointer;
}

.personHeaderTitle {
	width: 50%;
	text-align: center;
	font-size: 1.8rem;
	font-weight: bold;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.muiPerson .muiPersonIcon{
	vertical-align: middle;
	height: 100%;
	border: none;
	display: table-cell;
	width: 3.2rem;
	text-align: center;
}

.muiPerson .muiPersonIcon img,.muiPerson .muiPersonIcon span{
	width: 3rem;
	height: 3rem !important;
	border-radius: 50%;
	overflow: hidden;
	text-align: center;
	line-height: 2.5rem;
	vertical-align: middle;
	border: 1px solid #c9dfff;
}

.muiPerson .muiPersonInfo{
	vertical-align: middle;
	height: 100%;
	border: none;
	display: table-cell;
}

.muiPerson .muiPersonName{
	padding-left: 0.5rem;
}

.muiPerson .muiParentNames{
	padding-left: 0.5rem;
    font-size: 1.2rem;
    padding-top: 0.3rem;
    color: #989898;
    width: 93%;
    padding-right: 1rem;
}

.muiPerson .personHeader{
	width: 100%;
	display: inline-table;
	border-bottom: 0.1rem solid #C9D7E0;
	background-color: #18b4ed;
	color: #fff;
	table-layout: fixed;
}

.personHeader > div{
	display: table-cell;
	vertical-align: middle;
	overflow: hidden;
}

.personHeaderTitle{
	width: 50%;
	text-align: center;
	font-size: 1.8rem;
	font-weight: bold;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.personHeaderReturn{
	padding-left: 1rem;
	color: #fff;
	/* float: right; */
	cursor: pointer;
}

.mblEdgeToEdgeList .muiListItem.muiPerson{
	margin: 0;
	padding: 0.8rem 0.5rem 0.8rem 1rem;
	position: relative;
}

.mblEdgeToEdgeList .muiListItem.muiPerson:not(:last-child):after{
    content: " ";
    position: absolute;
    z-index: 2;
    bottom: 0;
    left: 0;
    right: 0;
    border-bottom: .1rem solid #eee;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}