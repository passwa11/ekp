/*审批弹窗的样式*/
.lbpmSummaryContent{
	padding-left: 1.5rem;
    padding-right: 1.5rem;
    margin-bottom: 7.5rem;
}
.lbpmSummaryContent .processInfo{
	display: none;
}
.lbpmSummaryContent .processInfo.active{
	display: block;
}
.lbpmSummaryContent .processInfo .title{
	font-size: 1.4rem;
    color: #2A304A;
    margin-bottom: 1rem;
}
.lbpmSummaryContent .processInfo .content{
	font-size: 1.4rem;
    color: #979DB1;
    margin-bottom: 3rem;
}
.lbpmSummaryContent .usageContent .title{
	font-size: 1.4rem;
    color: #2A304A;
    margin-bottom: 1rem;
}
.lbpmSummaryContent .usageContent .content textarea{
	height: 9.35rem;
    background: #F8F8F8;
    border-radius: 4px;
}
