.mhuiSysAttendForm {
	font-family: MicrosoftYaHei;
	letter-spacing: 0;
	height: 100%;
	width: 100%;
	display: flex;
	flex-flow: row-nowrap;
	align-items: center;
	justify-content: center;
	overflow: hidden;
}

.mhuiSysAttendFormItem {
	color: #333;
    font-size: 1.625rem;
    text-align: center;
}

.mhuiSysAttendFormItem span{
	font-size: 3.75rem;
}

.mhuiSysAttendFormSplit {
	margin: 0 1.25rem;
	font-size: 1.625rem;
	color: #666666;
	padding: 0 1.375rem;
	padding-bottom: 0.625rem;
	border-bottom: 1px solid #D5D5D5;
}