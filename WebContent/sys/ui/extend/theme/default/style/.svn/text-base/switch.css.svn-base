.weui_switch {
	display: inline-block;
	line-height: 22px;
}
.weui_switch>span{ vertical-align: middle;}
.weui_switch_bd{ display: inline-block; width: 42px; height: 22px; position: relative; vertical-align: middle;}
.weui_switch input {
	display: none;
}

.weui_switch input+span {
	display: inline-block;
	box-shadow: rgb(223, 223, 223) 0px 0px 0px 0px inset;
	border-color: rgb(223, 223, 223);
	-webkit-transition: border 0.4s, -webkit-box-shadow 0.4s;
	transition: border 0.4s, box-shadow 0.4s;
	background-color: rgb(255, 255, 255);
	width: 40px;
	height: 20px;
	line-height: 20px;
	border: 1px solid #dfdfdf;
	border-radius: 20px;
	cursor: pointer;
	display: inline-block;
	position: absolute;
	left: 0;
	top: 0;
	vertical-align: middle;
	box-sizing: content-box;
	background-clip: content-box;
}

.weui_switch input ~small{
	display: inline-block;
	content: "";
	-webkit-transition: background-color 0.4s, left 0.2s;
	transition: background-color 0.4s, left 0.2s;
	width: 20px;
	height: 20px;
	line-height: 20px;
	-webkit-box-shadow: 0 0 2px rgba(0, 0, 0, 0.31);
	box-shadow: 0 0 2px rgba(0, 0, 0, 0.31);
	background: #fff;
	border-radius: 100%;
	position: absolute;
	cursor: pointer;
	top:1px;
	left: 1px;
}

.weui_switch input:checked+span {
	-webkit-box-shadow: #37b8f2 0px 0px 0px 13.5px inset;
	box-shadow: #37b8f2 0px 0px 0px 13.5px inset;
	border-color: #37b8f2;
	-webkit-transition: border 0.4s, box-shadow 0.4s, background-color 1.2s;
	transition: border 0.4s, box-shadow 0.4s, background-color 1.2s;
	background-color: #37b8f2;
}

.weui_switch input:checked ~small{
	position: absolute;
	left: 21px;
	-webkit-transition: background-color 0.4s, left 0.2s;
	transition: background-color 0.4s, left 0.2s;
	background-color: rgb(255, 255, 255);
}
.weui_switch small ~span{ display:inline-block; margin-left:5px; vertical-align:middle;}