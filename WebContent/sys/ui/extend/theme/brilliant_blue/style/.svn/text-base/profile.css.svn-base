
/* 后台管理页面相关样式 porfile.css Starts ++++++++++++++++++++++++++++++++++++++++ */

	/* 头部 Starts */
.lui_profile_header_frame {
  background: #0e163d;
}
.lui_profile_header_navTop_item:hover,
.lui_profile_header_navTop_item.current,
.lui_profile_header_navTop_item.more.current,
.lui_profile_header_navTop_item.more:hover,
.lui_profile_header_navTop_item.lui_profile_navTop_over {
  background-color: #2f84fb;
  -webkit-box-shadow: inset 0 3px 5px rgba(0, 0, 0, .125);
     -moz-box-shadow: inset 0 3px 5px rgba(0, 0, 0, .125);
      -ms-box-shadow: inset 0 3px 5px rgba(0, 0, 0, .125);
       -o-box-shadow: inset 0 3px 5px rgba(0, 0, 0, .125);
          box-shadow: inset 0 3px 5px rgba(0, 0, 0, .125);
}
.lui_profile_header_navTop_popup .lui_profile_header_navTop_item{
  background-color: #2f84fb;
}
.lui_profile_header_navTop_popup .lui_profile_header_navTop_item:hover {
  background-color: #2f84fb;
}
.lui_portal_header_location:after {
  border-color: #fff;
  border-color: rgba(255,255,255,.35);
}
.lui_profile_userinfo{
  background-color: transparent;
}
.lui_profile_userinfo.lui_profile_userinfo_over{
  background-color: #2f84fb;
}
.lui_profile_userinfo_header{
  color:#333;
  background-color: #fff;
}

.location_input{
  border-radius: 4px;
  border: 1px solid #d5d5d5;
}
.location_input.status_select {
	border-color: #2f84fb;
}
.location_input .location_arrow:before{
  border-bottom-color: #d5d5d5;
}
.location_input .location_arrow:after{
  border-bottom-color: #fff;
}
.location_input.status_select .location_arrow:before {
  border-bottom-color: #2f84fb;
}
  /* 头部 Ends */
  
	/* 左侧栏 Starts */
.lui_profile_navLeft_container {
  background-color: #0e163d;
}
.lui_profile_navLeft_container:after,
.lui_profile_navLeft_container:before {
  content: '';
  display: block;
  background-repeat: no-repeat;
  background-position: 50%;
  position: absolute;
  z-index: -1;
}
.lui_profile_navLeft_container:after {
  width: 196px;
  height: 306px;
  /* background-image: url(../images/portal/asideLeft-top-img.png); */
  left: 0;
  top: 0;
}
.lui_profile_navLeft_container:before {
  width: 196px;
  height: 329px;
  background-image: url(../images/portal/asideLeft-bottom-img.png);
  position: fixed;
  left: 0;
  bottom: -63px;
}



.lui_profile_navLeft_mask{
  background-color: rgba(0, 0, 0, .6);
}
.lui_profile_navLeft_item{
  margin-top: 2px;
  margin-bottom: 2px;
  border-left: 0;
}
.lui_profile_link{
  border-left: 0;
}
.lui_profile_navLeft_item:hover,
.lui_profile_navLeft_item.current,
.lui_profile_navLeft_item.current:hover{
  background-color: transparent;
  border-left-color: transparent;
}
.lui_profile_navLeft_item .lui_profile_link:hover,
.lui_profile_navLeft_item.current .lui_profile_link,
.lui_profile_navLeft_item.current .lui_profile_link:hover {
  color: #fff;
  background-color: #33a1f6;
  background-color: rgba(255,255,255,.2);
}
.lui_profile_navLeft_item.current .lui_profile_link,
.lui_profile_navLeft_item.current .lui_profile_link:hover{
  -webkit-box-shadow: inset 0 3px 5px rgba(0, 0, 0, .125);
     -moz-box-shadow: inset 0 3px 5px rgba(0, 0, 0, .125);
      -ms-box-shadow: inset 0 3px 5px rgba(0, 0, 0, .125);
       -o-box-shadow: inset 0 3px 5px rgba(0, 0, 0, .125);
          box-shadow: inset 0 3px 5px rgba(0, 0, 0, .125);
}
	/* 左侧栏 Ends */

/* 后台管理页面相关样式 porfile.css Ends ++++++++++++++++++++++++++++++++++++++++ */
