@charset "UTF-8";

.print_head{
	padding: 10px 0;
	height: 25px;
	background: #fff;
	width: 100%;
	border-bottom: 1px solid #d5d5d5;
}

.app_print_search {
    float: right;
}

.app_print_searchbox {
    position: relative;
    display: inline-block;
    margin-right: 1px;
    padding-left: 0;
    padding-right: 24px;
    width: 200px;
    height: 24px;
    border: 1px solid #d5d5d5;
    border-radius: 4px;
    margin-right: 10px;
}

.app_print_searchbox input {
    width: 96%;
    height: auto;
    line-height: 20px;
    padding: 2px 2%;
    color: #7d7d7d;
    border: none;
    outline: none;
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
}

.app_print_searchbtn {
    margin-left: 0;
    position: absolute;
    right: 0px;
    top: 0px;
    display: inline-block;
    border: none;
    text-indent: -9999em;
    width: 24px;
    height: 24px;
    background: url(../images/search_btn.png) no-repeat 50%;
}

.print_content{
	margin-bottom: 50px;
}

.print_bottom{
	position: fixed;
    bottom: 0;
    left: 0px;
    right: 0px;
    background-color: white;
    padding: 10px;
}

.print_bottom .print_bottom_buttons{
	float : right;
}

.print_ul li{
	list-style: none;
	padding: 8px 10px;
	border-bottom: 1px solid #ebdddd;
	background-color: #fff;
}

.print_ul li:hover{
	cursor:pointer;
	background-color:#d9e7fd;
}

.print_ul .print_li_selected{
	background-color: cornflowerblue !important;
}