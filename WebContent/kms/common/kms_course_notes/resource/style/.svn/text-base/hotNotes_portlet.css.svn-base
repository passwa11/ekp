.km-note-list:after {
  content: '';
  display: table;
  visibility: hidden;
  clear: both;
}
.km-note-list-panel {
  background-color: #ededee;
  width: 960px;
}
.km-note-list-row {
  padding: 0 15px;
}
.km-note-list {
  list-style-type: none;
  height: 310px;
  border-bottom: 10px solid #fef3e7;
}
.km-note-list>li {
  float: left;
  width: 25%;
  position: relative;
  bottom: -30px;
  transition: bottom 0.3s;
  -moz-transition: bottom 0.3s;
  -webkit-transition: bottom 0.3s;
  -o-transition: bottom 0.3s;
}
.km-note-list>li:hover {
  bottom: -15px;
  transition: bottom 0.3s;
  -moz-transition: bottom 0.3s;
  -webkit-transition: bottom 0.3s;
  -o-transition: bottom 0.3s;
}
.km-note-list-item {
  height: 280px;
  margin: 0 15px;
  padding: 0 20px;
  background-color: #fdfaf7;
  background-image: url(../images/note-bg.png);
  background-size: 100% 100%;
  transition: box-shadow 0.3s;
  -moz-transition: box-shadow 0.3s;
  -webkit-transition: box-shadow 0.3s;
  -o-transition: box-shadow 0.3s;
}
.km-note-list-item:hover {
  box-shadow: 0px 0px 14px 2px #ccc;
  transition: box-shadow 0.3s;
  -moz-transition: box-shadow 0.3s;
  -webkit-transition: box-shadow 0.3s;
  -o-transition: box-shadow 0.3s;
}
.km-note-list-title {
  margin: 0;
  font-weight: 600;
  line-height: 52px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.delete .km-note-list-title {
  color: #f74c4c;
}
.km-note-list-author {
  color: #3796f8;
  font-size: 12px;
}
.km-note-list-date {
  color: #666;
  float: right;
  font-size: 12px;
}
.km-note-list-content {
  line-height: 30px;
  margin-top: 6px;
  font-size: 12px;
}
.km-note-list-footer {
  position: absolute;
  bottom: 24px;
  right: 35px;
}
.km-note-list-footer>a {
  display: table;
  float: left;
  margin-left: 20px;
  position: relative;
}
.km-note-list-admire:after {
  content: '';
  width: 1px;
  height: 16px;
  position: absolute;
  top: 2px;
  right: -10px;
  background-color: #ddd;
}
.km-note-list-admire>.icon,
.km-note-list-comment>.icon {
  display: table-cell;
  width: 20px;
  height: 20px;
  background-repeat: no-repeat;
  background-size: 90%;
}
.km-note-list-admire>.icon {
  background-image: url(../images/admireIcon.png);
}
.km-note-list-comment>.icon {
  background-image: url(../images/commentIcon.png);
}
.km-note-list-admire>.num,
.km-note-list-comment>.num {
  color: #666;
  display: table-cell;
  /*width: 12px;*/
  text-align: right;
}

.slide.hot .km-note-list-title {
  font-size: 16px;
  line-height: 24px;
  padding-bottom: 4px;
}
.slide.hot .km-note-list-detail {
  border-bottom: 1px solid #f0edea;
  padding-bottom: 8px;
}
.slide.hot .km-note-list-footer {
  bottom: 20px;
}
.slide.hot .km-note-list>li:hover .km-note-list-footer {
  bottom: 24px;
}

.slide.km-note-list-panel{
  height: 430px;
  position: relative;
}
.slide .km-note-list-row {
  padding-top: 20px;
}
.slide .km-note-list {
  border-bottom: none;
  display: inline-block;
  margin-left: 60px;
  transition: margin-left 0.3s;
}
.slide .km-note-list:hover {
  margin-left: 50px;
  transition: margin-left 0.3s;
}
.slide .km-note-list>li {
  width: 250px;
  margin: 15px 10px 0;
  bottom: 0;
  transition: width,margin-top 0.3s,0.3s;
  background-color: #fdfaf7;
}
.slide .km-note-list>li:hover {
  box-shadow: 0px 0px 14px 2px #ccc;
  width: 270px;
  margin-top: 0;
  transition: width,margin-top,box-shadow 0.3s,0.3s,0.3s;
}
.slide .km-note-list-item {
  cursor: pointer;
  height: 280px;
  transition: height 0.3s;
  background-image: none;
  margin: 15px;
  padding: 10px;
  border: 1px solid #e3e1de;
}
.slide .km-note-list>li:hover .km-note-list-item {
  height: 330px;
  padding: 10px 10px 0;
  transition: height 0.3s;
  box-shadow: none;
}
.slide .km-note-list-tag {
  top: 14px;
  left: 24px;
}
.slide.myNote .km-note-list-content {
  padding-top: 0;
  line-height: 26px;
}
.slide .km-note-list-content {
  line-height: 26px;
}
.km-note-list-page {
  position: absolute;
  bottom: 10px;
  right: 0;
  left: 0;
  text-align: center;
  font-size: 16px;
  color: #333;
}
.km-note-list-button-wrap>input {
  width: 50px;
  height: 50px;
  background-color: #bebebe;
  border: none;
  border-radius: 50%;
  cursor: pointer;
  transition: background-color 0.3s;
  -moz-transition: background-color 0.3s;
  -webkit-transition: background-color 0.3s;
  -o-transition: background-color 0.3s;
}
.km-note-list-button-wrap>button:hover {
  background-color: #aaa;
  transition: background-color 0.3s;
  -moz-transition: background-color 0.3s;
  -webkit-transition: background-color 0.3s;
  -o-transition: background-color 0.3s;
}
.km-note-list-button-wrap>.left {
  left: 14px;
  background-image: url(../images/arrowLeft.png);
}
.km-note-list-button-wrap>.right {
  right: 14px;
  background-image: url(../images/arrowRight.png);
}
.km-note-list-button-wrap>.left,
.km-note-list-button-wrap>.right {
  position: absolute;
  top: 46%;
  margin-top: -25px;
  background-repeat: no-repeat;
  background-position: center;
}
.slide.myNote .km-note-list-footer {
  border-top: 1px solid #f0edea;
  right: 26px;
  left: 26px;
  padding: 8px 0 2px;
}

.lui_listview_gridtable_main_body {
    background-color: #ededee !important;
}
