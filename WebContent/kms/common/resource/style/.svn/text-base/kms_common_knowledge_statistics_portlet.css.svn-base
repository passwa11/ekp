.knowledge_statistics_portlet_item{
	height: 111px;
    display: inline-block;
    width: 20%;
    min-width: 237px;
    margin: 0 auto;
    margin-bottom: 10px;
}
.knowledge_statistics_portlet_content{
    height: 93px;
    background: #FFFFFF;
    background: #FFFFFF;
    border: 1px solid #E6EAEF;
    box-shadow: 0 1px 1px 0 #dadee2;
    border-radius: 6px;
    position: relative;
    margin: 0 8px;
    margin-top: 16px;
    max-width: 310px;
    cursor: pointer;
}
.knowledge_statistics_portlet_icon_div{
    width: 72px;
    height: 72px;
    background: #FFB854;
    border-radius: 5.4px;
    position: absolute;
    left: 24px;
    top: -16px;
    text-align: center;
}
.knowledge_statistics_portlet_icon{
    display: inline-block;
    width: 32px;
    height: 26px;
    background: url(../../resource/img/book.png) no-repeat;
    background-size: contain;
    margin-top: 23px;
}
.knowledge_statistics_portlet_content .icon_back_1{
	background: #FF6255;
}
.knowledge_statistics_portlet_content .icon_back_2{
	background: #59D77B;
}
.knowledge_statistics_portlet_content .icon_back_3{
	background: #4285F4;
}
.knowledge_statistics_portlet_content .icon_back_4{
	background: #7F7DF1;
}
.knowledge_statistics_portlet_data{
    height: 80px;
    position: absolute;
    right: 0;
    padding-right: 20px;
    padding-top: 14px;
}
.knowledge_statistics_portlet_data .data_title{
    font-size: 20px;
    color: #333333;
    line-height: 40px;
    display: inline-block;
    vertical-align: top;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 100px;
}
.knowledge_statistics_portlet_data .data_total{
	font-size: 28px;
	color: #4A4A4A;
	text-align: right;
	display: inline-block;
	vertical-align: top;
	line-height: 40px;
}
.knowledge_statistics_portlet_data .data_monthlyNewNumber{
	font-size: 14px;
	color: #9B9B9B;
	text-align: right;
}
.knowledge_statistics_portlet_data >div{
	text-align: right;
}

.knowledge_statistics_portlet_container{
	font-size: 0;
	min-width: 237px;
	padding:5px 0;
}

.knowledge_statistics_portlet_content_min .knowledge_statistics_portlet_data .data_title {
    font-size: 15px;
    max-width: 60px;
}

.knowledge_statistics_portlet_content_min .knowledge_statistics_portlet_data .data_total {
    font-size: 21px;
}

.knowledge_statistics_portlet_content_min .knowledge_statistics_portlet_data {
    padding-right: 10px;
}
.knowledge_statistics_portlet_content_min .knowledge_statistics_portlet_icon_div {
    left: 12px;
}

.knowledge_statistics_portlet_content_min_2 .knowledge_statistics_portlet_data .data_title {
    font-size: 17px;
    max-width: 80px;
}

.knowledge_statistics_portlet_content_min_2 .knowledge_statistics_portlet_data .data_total {
    font-size: 24px;
}

.knowledge_statistics_portlet_content_min_2 .knowledge_statistics_portlet_data {
    padding-right: 10px;
}
.knowledge_statistics_portlet_content_min_2 .knowledge_statistics_portlet_icon_div {
    left: 12px;
}

.knowledge_statistics_portlet_content_min_3 .knowledge_statistics_portlet_data .data_title {
    font-size: 17px;
    max-width: 80px;
}

.knowledge_statistics_portlet_content_min_3 .knowledge_statistics_portlet_data .data_total {
    font-size: 24px;
}

.knowledge_statistics_portlet_content_min .knowledge_statistics_portlet_data  .data_monthlyNewNumber {
    font-size: 12px;
}
.knowledge_statistics_portlet_content_min_2 .knowledge_statistics_portlet_data  .data_monthlyNewNumber {
    font-size: 12px;
}


