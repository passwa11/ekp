/*知识精选portlet 图文摘要列表 Starts */
.lui_portlet_graphic_wrap {
}

.lui_portlet_graphic_item {
    display: table;
    /* padding:10px; */
    position: relative;
    table-layout: fixed;
    width: 100%;
}

.lui_img_content_td {
    display: table-cell;
    vertical-align: middle;
    width: 140px;
    padding: 10px;
}

.lui_txt_content_td {
    display: table-cell;
    vertical-align: top;
    padding: 10px;
    padding-left: 0;
    /* overflow: hidden; */
}

.lui_portlet_graphic_item .lui_img_content {
    height: 126px;
    background: #f0f0f0;
    position: relative;
    /*     padding-right:10px; */
    /* padding-top: 10px; */
    line-height: 126px;
    font-size: 0;
    vertical-align: middle;
}

.lui_portlet_graphic_item .lui_img_content img {
    max-width: 100%;
    max-height: 100%;
    vertical-align: middle;
}

.lui_portlet_graphic_item .lui_txt_content {
    padding-left: 10px;
    /* display: table-cell; */
}

.lui_portlet_graphic_item h3.lui_title_wrap {
    margin: 0;
    font-size: 17px;
    margin-bottom: 10px;
    margin-right: 0em;
    padding-right: 4em;
    font-weight: normal;
}

.lui_portlet_graphic_item h3.lui_title_wrap span {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 100%;
    display:  block;
}

.lui_portlet_graphic_item .lui_summary {
    color: #666;
    margin-bottom: 19px;
    line-height:24px;
    height:50px;
    overflow:hidden;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
}

.lui_portlet_graphic_item .lui_info {
    display: table;
    width: 100%;
    color: #999;
}

.lui_portlet_graphic_item .lui_fl {
    display: table-cell;
}
.lui_portlet_graphic_item .lui_fl .lui_info_item{
    margin-right:8px;
}
.lui_portlet_graphic_item .lui_fl .lui_info_item:before{
    content:"|";
    margin-right:8px;
}
.lui_portlet_graphic_item .lui_fl .lui_info_item:first-child:before{
    display:none;
}
.lui_portlet_graphic_item .lui_fr {
    display: table-cell;
    text-align: right;
}

.lui_portlet_graphic_item .lui_info_item {
}

.lui_portlet_graphic_item .lui_score {
    position: absolute;
    right: 15px;
    top: 10px;
}

.lui_portlet_graphic_item .lui_score em {
    font-size: 18px;
    font-style: normal;
    color: #fbcd6e;
    margin-right: 2px;
}
/*知识精选portlet 图文摘要列表 Starts */