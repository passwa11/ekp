.knowlwdge_thumbnail{
	position: relative;
}
.knowlwdge_thumbnail .status_over {
    background: #709e55;
}

.thumbnail_tag {
    padding: 1px 8px;
    min-width: 48px;
    line-height: 20px;
    text-align: center;
    color: #fff;
    font-size: 12px;
    border-radius: 2px;
    border-top-right-radius: 20px;
    border-bottom-right-radius: 20px;
    background-color: #8ebd72;
    position: absolute;
    left: 14px;
    top: 7px;
    z-index: 1;
}
.thumbnail_tag .com_number{
 	color:#fff !important;
}
.knowlwdge_thumbnail .thumbnail_tag:before {
    content: '';
    color: #709e55;
    display: inline-block;
    width: 0;
    height: 0;
    vertical-align: middle;
    border-right: 4px dashed;
    border-right: 4px solid \9;
    border-top: 2px dashed;
    border-top: 2px solid \9;
    border-bottom: 4px solid transparent;
    position: absolute;
    left: 1px;
    bottom: -5px;
    z-index: 0;
}

.knowlwdge_thumbnail .thumbnail_tag_borrow:before{
	color: #709e55;
}
.knowlwdge_thumbnail .status_over_borrow {
    background: #709e55;
}

.knowlwdge_thumbnail .thumbnail_tag_read:before{
	color: #2f84fb;
}
.knowlwdge_thumbnail .status_over_read {
    background: #2f84fb;
}
