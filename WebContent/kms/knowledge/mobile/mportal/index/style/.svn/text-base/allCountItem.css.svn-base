#kms_knowledge_all_count_box {

}

#kms_knowledge_all_count_box ul {
    text-align: center;

}

#kms_knowledge_all_count_box ul li{
    display: inline-block;
    margin: auto;
    width: 30%;
    height: 8rem;
}

#kms_knowledge_all_count_box ul li.total{
    background-image:linear-gradient(135deg, #42B0F4 0%, #4285F4 100%);
    border-radius: 0.4rem;

}

#kms_knowledge_all_count_box ul li.doc{
    background-image: linear-gradient(161deg, #FFCC50 3%, #FFB300 100%);
    border-radius: 0.4rem;
    margin:  3%;
}



#kms_knowledge_all_count_box ul li.wiki{
    background-image: linear-gradient(138deg, #7FEC9E 0%, #5BC77C 100%);
    border-radius: 0.4rem;
}

#kms_knowledge_all_count_box ul li .item{
    text-align: left;
    height: 8rem;
}

#kms_knowledge_all_count_box ul li .item .num{
    font-size: 2.8rem;
    color: #F9F9F9;
    letter-spacing: 0;
    line-height: 30px;
    font-weight: 700;
    padding-left: 1rem;
    padding-top: 1.2rem;
}

#kms_knowledge_all_count_box ul li .item .text{
    font-size: 14px;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: left;
    line-height: 18px;
    font-weight: 400;
    padding-left: 1rem;
    padding-top: 0.8rem;
    float: left;
}

#kms_knowledge_all_count_box ul li.total .icon{
    width: 2.7rem;
    height: 3.8rem;
    background:url("../images/total.png");
    background-size: cover;
    bottom: 0;
    float: right;
}

#kms_knowledge_all_count_box ul li.doc .icon{
    width: 2.7rem;
    height: 3.8rem;
    background:url("../images/doc.png");
    background-size: cover;
    bottom: 0;
    float: right;
}

#kms_knowledge_all_count_box ul li.wiki .icon{
    width: 2.7rem;
    height: 3.8rem;
    background:url("../images/wiki.png");
    background-size: cover;
    bottom: 0;
    float: right;
}