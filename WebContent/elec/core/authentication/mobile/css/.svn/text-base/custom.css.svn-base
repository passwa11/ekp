/*****************.identity_mobile（前缀） 移动端身份验证3个页面css *********************/
.identity_mobile .muiVerify-mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  /* background: rgba(0, 0, 0, 0.2); */
}

.identity_mobile .muiVerify-alert {
  width: 90%;
  height: 212px;
  border-radius: 8px;
  background: #fff;
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  margin-top: -106px;
  margin-left: auto;
  margin-right: auto;
}

.identity_mobile .muiVerify-msg {
  text-align: center;
}

.identity_mobile .muiVerify-icon_area {
}

.identity_mobile .muiVerify-icon {
  display: inline-block;
  width: 45px;
  height: 45px;
  background-repeat: no-repeat;
  background-position: center;
  margin-top: 24px;
  margin-bottom: 15px;
  background-size: 45px;
}

.identity_mobile .muiVerify-icon.icon_warning {
  background-image: url(../../images/mobile/icon-warning-mb.png);
}

.identity_mobile .muiVerify-text_area {
  font-size: 16px;
}

.identity_mobile .muiVerify-opr_area {
  color: #999;
  font-size: 15px;
  margin-top: 14px;
  margin-bottom: 18px;
}

.identity_mobile .muiVerify-ft {
  height: 44px;
  border-top: 1px solid #e5e5e5;
  text-align: center;
  line-height: 44px;
}

.identity_mobile .muiVerify-ft .muiVerify-btn {
  color: #4285f4;
  display: block;
}

/* 手机验证 */
.identity_mobile .muiVerify-container {
  height: 100%;
 /*  position: relative; */
  padding-left: 15px;
  padding-right: 15px;
  color: #999;
}

.identity_mobile .muiVerify-title {
  font-size: 24px;
  padding-top: 28px; /* padding-left: 15px; */ /* padding-right: 15px; */
  margin-bottom: 5px;
  color: #333;
}

.identity_mobile .muiVerify-desc {
  margin-bottom: 30px;
  font-size: 15px;
}

.identity_mobile .muiVerify-form {
  display: flex;
  width: 100%;
}

.muiVerify-form input {
  border: 1px solid #eee;
  line-height: 44px;
  padding: 0 5px;
  flex: 1;
}

.identity_mobile .muiVerify-form .muiVerify-btn {
  padding: 0 8px;
  background: #4285f4;
  color: #fff;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
}
.identity_mobile .muiVerify-form .btn-disabled{
	background: #999;
}
.identity_mobile .muiVerify-error{
    color:#F25643;
    margin-top:10px;
    font-size:12px;
}

.identity_mobile .muiVerify-footer {
  position: absolute;
  left: 10px;
  right: 10px;
  bottom: 25px;
  display: flex;
}

.identity_mobile .muiVerify-tips {
  margin-top: 15px;
  font-size: 14px;
}

.identity_mobile .muiVerify-footer .muiVerify-btn {
  flex: 1;
  text-align: center;
  display: inline-block;
  height: 44px;
  line-height: 44px;
  border: 1px solid #ddd;
  margin: 0 5px;
}
.identity_mobile #_xform_fdCertId{
	border: 1px solid #eee;
}