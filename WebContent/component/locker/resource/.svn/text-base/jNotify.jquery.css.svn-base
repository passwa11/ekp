/*****************/
/** jNotify CSS **/
/*****************/
#jNotify {
	position:absolute;
	background:#fff0e1  url('info.png') no-repeat 15px center;
	color:#ff6910;
	border:1px solid #fff0e1;
	padding:10px;
	padding-left:35px;
	margin:20px 15px;
	z-index:9999;
	-moz-border-radius : 5px;
	border-radius:5px;
	-webkit-border-radius:5px;
}
#jNotify a {color:#35517c !important;text-decoration:none;}

