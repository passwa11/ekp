.lui_hr_platform_calendar_wrap {
	padding: 5px;
	overflow-x: scroll;
}

.lui_hr_platform_calendar_top {
	width: 98%;
	min-width: 275px;
	height: 100px;
	border-bottom: 1px solid #efefef;

}

.lui_hr_platform_calendar_top_l {
	/*position: absolute;*/
	/*left: 30px;*/
	float: right;
	font-size: 60px;
	line-height: 100px;
	color: #999;
}

.lui_hr_platform_calendar_top_r {
	/*position: absolute;*/
	/*right: 10px;*/
	float: right;
	padding: 25px;

}

.lui_hr_platform_calendar_top_r .lui_hr_platform_calendar_top_r1 {
	height: 20px;
	width: 100%;
	padding-left: 10px;
}

.lui_hr_platform_calendar_top_r .lui_hr_platform_calendar_top_r1 span {
	display: inline-block;
	border: 1px solid #cfcfcf;
	padding: 3px 8px;
	font-size: 14px;
	line-height: 16px;
	border-radius: 3px;
	cursor: pointer;
}

.lui_hr_platform_calendar_top_r2 {
	height: 24px;
	margin-top: 10px;
	font-size:16px;
	/*position: absolute;*/
	/*left: -162px;*/
	/*bottom: 4px;*/
}
.lui_hr_platform_calendar_top_r2 span{
	display:inline-block;
	cursor:pointer;
	padding:0 5px;
}
.lui_hr_platform_calendar_top_r2 .lui_hr_platform_calendar_pre,
.lui_hr_platform_calendar_top_r2 .lui_hr_platform_calendar_next{
	font-weight: bold;
	font-size:0;
	width:0;
	height:0;
	border:5px solid transparent;
	/* margin-top: -13px; */
	vertical-align: 4px;
	cursor:pointer;
}
.lui_hr_platform_calendar_top_r2 .lui_hr_platform_calendar_pre{
	border-right-color:#aaa;
}
.lui_hr_platform_calendar_top_r2 .lui_hr_platform_calendar_next{
	border-left-color:#aaa;
}
.lui_hr_platform_calendar_table {
	margin-top: 20px;
}

.lui_hr_platform_calendar_table ul {
	width: 100%;
	list-style: none
}

.lui_hr_platform_calendar_table ul li {
	float: left;
	width: 14%;
	text-align: center;
	height: 50px;
	cursor:pointer;
}

.lui_hr_platform_calendar_table ul .lui_hr_platform_calendar_table_week
	{
	font-weight: 500;
	color: #999;
}
.lui_hr_platform_calendar_table_day{
	position: relative;
}
.lui_hr_platform_calendar_table_day_txt{
	display: inline-block;
	width:100%;
	line-height: 28px;
	font-size: 14px;
	width: 28px;
	height: 28px;
	vertical-align: middle;
	border: 1px solid transparent;
	border-radius: 50%;
	color: #202124;
}
.lui_hr_platform_calendar_table_day_select .lui_hr_platform_calendar_table_day_txt{
	border-color:#5795FD;
}
.lui_hr_platform_calendar_table_day_pointer {
	right: 18px;
	display: inline-block;
	border-radius: 3px;
	border: 3px solid #4D7CFE;
	position:absolute;
	bottom: 44px;
	/* left:48%; */
}
.lui_hr_platform_calendar_table_day_select span{
	/* background-color:#4285F4; */
	/* color:#fff; */
	/* border-radius: 5px; */
}
.lui_hr_platform_calendar_schedule_li{
	padding-bottom:25px;
	cursor:pointer;
}