.personal_profile_box {
  background: #f5f7fa;
}
.personal_profile_bg{
  width: 100%;
  height: 19.7rem;
  background: url('../image/person/personal_profile.png') no-repeat center;
  background-size: contain;
}
.personal_profile_userMessage {
  background: #fff;
  border-radius: .5rem;
  padding-bottom: 1.75rem;
  margin-bottom: 1.5rem;
}
.personal_profile_content_message {
  padding: 0 1.5rem;
  position: relative;
  top: -10rem;
}
.ppu_avatar {
  position: relative;
  top: -2rem;
}
.ppu_avatar_icon {
  width: 5rem;
  height: 5rem;
  border-radius: 50%;
  display: block;
  background: #fff;
  margin: 0 auto;
}
.ppu_name {
  text-align: center;
  width:80%;
  margin:0 auto;
  margin-bottom: 1.1rem;
}
.ppu_name span {
  font-size: 1.3rem;
  color: #50617A;
}
.ppu_name .ppu_name-text {
  font-size: 1.5rem;
  color: #50617A;
  font-weight: bold;
}
.ppu_label {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
  margin:0 5rem;
}
.ppu_label div {
  background: #eaf3fd;
  font-size: 1.1rem;
  color: #318FED;
  padding: 0 0.45rem;
  margin: .5rem 0;
  margin-right: 1.25rem;
}
.ppu_label_more_icon {
  background: url('../image/person/jump.png') no-repeat;
  background-size: contain;
  width: .75rem;
  height: .75rem;
  display: inline-block;
}
.ppu_bp {
  display: flex;
  justify-content: center;
  margin-top: 1.8rem;
}
.ppu_bp div {
  font-size: 1.3rem;
  color: #50617A;
  display: flex;
  align-items: center;
}
.ppu_bp-brithday {
  width: 1.2rem;
  height: 1.4rem;
  display: inline-block;
  background: url('../image/person/birthday.png')no-repeat center;
  background-size: contain;
  margin-right: .65rem;
}
.ppu_bp_phone {
  width: 1.25rem;
  height: 1.4rem;
  display: inline-block;
  background: url('../image/person/phone.png')no-repeat center;
  background-size: contain;
  margin-right: .65rem;
}
.ppu_bp_phone_content {
  margin-left: 4.65rem;
}
.personal_profile_content_card {
  background: #fff;
  margin-bottom: 1.5rem;
  border-radius: .5rem;
}
.ppc_c_title {
  padding: 1.25rem 2.25rem 1.2rem 1.95rem;
  font-size: 1.5rem;
  color: #50617A;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: .05rem solid #DFE3E9;
}
.ppc_c_title div {
  display: flex;
  align-items: center;
}
.ppc_c_title-icon {
  width: .2rem;
  height: 1.45rem;
  display: inline-block;
  background: #318FED;
  border-radius: .5rem;
  margin-right: 1rem;
}
.ppc_c_detail_more-icon {
  background: url('../image/person/jump.png') no-repeat center;
  background-size: contain;
  display: inline-block;
  height: 1.1rem;
  width: 1.1rem;
}
.ppc_c_more-icon {
  background: url('../image/person/jump-down.png') no-repeat center;
  background-size: contain;
  display: inline-block;
  height: 1.1rem;
  width: 1.1rem;
}
.up {
  background: url('../image/person/jump.png') no-repeat center;
  background-size: contain;
}
.down {
	background: url('../image/person/jump-down.png') no-repeat center;
	background-size: contain;
}
.ppc_c_content {
  padding: 1.7rem 0 .55rem 2rem;
}
.ppc_c_list {
  display: flex;
  font-size: 1.5rem;
  color: #9DB0CE;
  margin-bottom: 1.15rem;
}
.ppc_c_list_head {
  flex: 2;
}
.ppc_c_list_body {
  flex: 4;
  font-size: 1.5rem;
  color: #50617A;
  padding-right: 1rem;
}
.ppc_c_border_content {
  padding-left: 2rem;
}
.ppc_c_border_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 1.5rem;
  color: #50617A;
  padding: 1.1rem 0;
  padding-right: 2rem;
  border-bottom: .05rem solid #DFE3E9;
}
.ppc_c_border_item:last-child {
  border:none;
}
.ppc_c_title_border {
  border: none;
}

.file-overview-footer {
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  width: 100%;
  font-size: 1rem;
  height: 5rem;
  background: #fff;
  padding-top: 1.05rem;
  box-sizing: border-box;
  color: #9DB0CE;
}
.file-overview-footer div {
  flex: 1;text-align: center;
}
.fof-overview-icon {
  background: url('../image/index/overview.png') no-repeat center;
  background-size: contain;
  width: 1.9rem;
  height: 1.9rem;
  display:block;
  margin: 0 auto;
}
.fof-data-icon {
  background: url('../image/index/data.png') no-repeat center;
  background-size: contain;
  width: 1.9rem;
  height: 1.9rem;
  display:block;
  margin: 0 auto;
}
.fof-file-icon {
  background: url('../image/index/file.png') no-repeat center;
  background-size: contain;
  width: 1.9rem;
  height: 1.9rem;
  margin: 0 auto;
  display:block;
}
.fof-file-icon-active {
  background: url('../image/index/file-active.png') no-repeat center;
  background-size: contain;
}
.fof-file-icon-active+span {
  color: #318FED; 
}
.ppu_label_edit_icon {
  width: 1rem;
  height: 1rem;
  background: url('../image/person/edit.png') no-repeat center;
  background-size: contain;
  display: inline-block;
}
.ppu_label .ppu_label_edit_button {
  background: #318FED;
  border-radius: .95rem;
  color: #FFFFFF;
  width: 4.65rem;
  height: 1.6rem;
  display:flex;
  align-items: center;
  justify-content: space-around;
}
.ppc_c_add_icon {
  width: 1.25rem;
  height: 1.25rem;
  background: url('../image/person/add.png') no-repeat center;
  background-size:contain;
  display: inline-block;
}
.ppc_c_add_button span{
  font-size: 1.5rem;
  color: #318FED;
  margin-left: .5rem;
}
.mel_c_close_icon {
  width: 1.1rem;
  height: 1.1rem;
  background: url('../image/person/delete_fill.png') no-repeat center;
  background-size:contain;
  display: inline-block;
  position: absolute;
  top: -.09rem;
  right: -.09rem;
}
.modal_edit_label_content {
  display: flex;
  flex-wrap: wrap;
}
.mel_c_item {
  width: 23.5%;
  display: flex;
  align-items: center;
  height: 3.6rem;
  justify-content: center;
  background: #DCEEFB;
  border-radius: .5rem;
  margin-right: .5rem;
  font-size: 1.4rem;
  color: #108EE9;
  position: relative;
  margin-bottom: .9rem;
}
.mel_c_item span{
    width: 100%;
    display: inline-block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 0 .1rem;
    text-align: center;
}
.mel_c_add_icon {
  width: .9rem;
  height: .9rem;
  background: url('../image/person/addWhite.png')no-repeat center;
  background-size: contain;
  display: inline-block;
}
.mel_c_item_edit_button {
  background: #318FED;
}
.modal_edit_label_box {
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  width: 100%;
  height: 100%;
  padding: 1.65rem 1.5rem;
  box-sizing: border-box;
}

