.criteriaNode{
	display:flex;
	justify-content: space-between;
}

.hr-select{
	max-width:10rem;
	height:4.4rem;
	position:relative;
	z-index:3;
	line-height: 4.4rem;
	overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.hr-list-criteria{
	height:4.4rem;
	background-color:#fff;
	position:relative;
	z-index:3;
}

.hr-criteria-mask{
	position:absolute;
	background: rgba(0,0,0,0.40);
	width:100%;
	height:100%;
	z-index:2;
	top:0;
}

.hr-select-dropdown{
	position:absolute;
	width:100%;
	background-color:#fff;
	max-height:44rem;
	left:0;
	overflow:auto;
}
.hr-select-dropdown-item{
	height:4.4rem;
	line-height:4.4rem;
	font-size: 1.4rem;
	color: #586880;
	letter-spacing: 0.0045rem;
	padding-left:1.95rem;
	border-top:1px solid #DFE3E9;
	display:flex;
	justify-content: space-between;
	
}
.hr-select-selected-active .hr-select-item{
	color:#318FED;
}
.hr-select-selected-active .hr-select-selected{
	    width: 0.65rem;
	    height: 1.5rem;
		border:3px solid #318FED;
		border-bottom:none;
		border-right:none;
		transform: rotate(-135deg);
		margin-right:2rem;
		align-self: center;
		position:relative;
		bottom:3px;
}
.hr-select-content{
	font-size: 1.4rem;
	color: #50617A;
	display:flex;
	align-items:center;
}
.hr-select-content-down{
	border:.5rem solid transparent;
	border-top-color:#9DB0CE;
	position:relative;
	top:.3rem;
}
.hr-select-content-up{
	position:relative;
	border:.5rem solid transparent;
	border-top-color:transparent;
	border-bottom-color:#318FED;
	bottom:.3rem;
}

.hr-select-content span:first-child{
	padding-right:.5rem;
	padding-left:1.95rem;
	max-width:7rem;
	display:inline-block;
	overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;	
}
.trogger-height-hidden{
	height:0;
	transition:height 1s;
	overflow:hidden;
}
/************************************/

.addressSubject{

}
.muiAddressOrg,.muiCateFiledShow{
	line-height:1;
}
.moreBtn{
	line-height:4rem;
	font-size: 1.4rem;
	color: #50617A;
	min-width:8rem;
	text-align:center;
}
.addressSubject{
	font-size: 1.4rem;
	color: #50617A;
	text-align:left;
}
.addressSubject>span:first-child{
	padding-right:.5rem;
}
.addressNode .oldMui .muiCateFiledShow{
	margin:0;
	text-align:center;
}
.muiAddressOrg{
	margin-right:0!important;
}
/*********************/
.more-button-dropdown{
	min-height:3rem;
	width:100%;
	left:0;
	top:4rem;
	padding:1rem 0 0 0;
	border-top:1px solid #f5f5f5;
}

.hr-check-box{
	
}
.hr-check-group{
	display:flex;
	flex-flow:wrap;
}
.hr-check-box-node{
	width:100%;
	height:3.6rem;
	width:8.15rem;
	background: rgba(51,51,51,0.05);
	font-size: 1.4rem;
	color: #50617A;
	border-radius: 4px;
	text-align: center;
	position:relative;
	margin: .5rem .6rem .5rem 0;
	line-height:3.6rem;
}
.hr-check-box-active{
	position:absolute;
	width:0;height:0;
	border-width:.9rem;
    border-color: #008BEB;
    border-style: solid;
    border-left-color: transparent;
    border-top-color: transparent;
    right:0;
    bottom:0;
}
.hr-check-box-active-icon{
	position:absolute;
	border: 1px solid #fff;
    width: .36rem;
    height: .72rem;
    border-left: none;
    border-top: none;
    transform: rotate(30deg);
    left: .1rem;
    top: -.2rem;
}
.hr-check-box-selected{
	background: rgba(49,143,237,0.1)!important;
} 
.hr-check-box-selected .hr-check-box-active{
	display:block!important;
}
.more-btn-item-title{
	line-height:1;
	color: #50617A;
	text-align:left;
	margin-bottom:.4rem;
}
.more-btn-item{
	margin-left:1.6rem;
	
}
.more-button-ensure{
	display:flex;
}
.more-button-ensure-button{
	width:50%;
}
.more-button-ensure>div:first-child{
	background: #EAF3FD;
	font-size: 1.4rem;
	color: #318FED;
}
.more-button-ensure>div:last-child{
	background: #318FED;
	color:#fff;
	font-size: 1.4rem;
}