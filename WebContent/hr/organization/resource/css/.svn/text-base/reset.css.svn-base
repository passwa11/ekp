.newInput input,.newInputDisable,.newAddress .inputselectsgl,.newSelect .inputselectsgl,.newDate .inputselectsgl,.newLangInput .inputselectsgl{
	height:30px;
	width:220px;
	border: 1px solid #DDDDDD;	
	border-radius: 3px;	
}
.newInput input{
	color:#333;
}
.newInput input::-webkit-input-placeholder { 
  color: #999;
}

.newInput input::-moz-placeholder {
  color: #999;
}

.newInput input:-ms-input-placeholder { 
  color: #999;
}   
.newInputDisable{
	background: #F5F5F5;
	line-height:30px;
	padding-left:8px;
	color:#999;
}
.newAddress .inputselectsgl,.newSelect .inputselectsgl,.newDate .inputselectsgl{
	width:224px!important;
	height:32px!important;
	
}
.newAddress .inputselectsgl .input{
	line-height:29px;
}
.newAddress div.mf_container ol.mf_list li.mf_item{
	overflow: hidden;
    max-width: 200px;
    white-space: nowrap;
    text-overflow: ellipsis;
}

    
.newHtmlSelect select{
	border: 1px solid #DDDDDD;
	border-radius: 2px;
}
.trlineheight40 tr{
	line-height:40px;
}
.newTextarea textarea{
	background: #FFFFFF;
	border: 1px solid #DDDDDD;
	border-radius: 2px;
	padding:10px;
}
.newTableTop{
	margin-top:20px!important;
}

.newLangInput .input_lang_icon{
	top:4px;
}
.newLangInput .inputselectsgl{
	width:72%!important;
}
.validation-advice, .lui_validate{
	background-color:#fff;
	border:none;
	padding:0;
	margin:0;
}
.validation-advice .lui_icon_s_icon_validator{
	vertical-align: middle;
	background:url('../images/error_close.png') no-repeat;
}
.validation-table .validation-advice-msg,.validation-table .validation-advice-msg .validation-advice-title{
	font-size: 12px;
	color: #666666!important;
}

.lui_listview_columntable_table{
	background:#F7F7F7;
}
