
html,body,#content{
	height:100%;
}
.enter-scan{
    background: url(../images/sacn_bg.jpg) 0 0 no-repeat;
    width: 100%;
    background-size: cover;
    position: relative;
    height: 100%;
}
.landray-title{
    font-size: .36rem;
    color: #fff;
    padding-top: .7rem;
    text-align: center;
}
.landray-tips{
    font-size: .24rem;
    color: #A8C0FF;
    margin-top: .2rem;
    text-align: center;
}
.bottom-bg-img{
    width: 100%;
    height: 4.15rem;
    position: absolute;
    bottom: 0;
    left: 0;
}
.bottom-bg-img img{
    width: 100%;
    height: 100%;
}
.scan-cont{
    background: #fff;
    box-shadow: 0 0 .2rem 0 #2E63F5;
    border-radius: .2rem;
    width: 5.5rem;
    height:5.2rem;
    margin: .63rem 1rem 0 1rem;
    box-sizing: border-box;
    text-align: center;
    display:flex;
    align-items:center;
    justify-content: center;
}
.header-nav{
    width: 100%;
    display: flex;
    padding: 0 30px;
    box-sizing: border-box;
    justify-content: space-between;
    color:  #3395FA;
    height: .68rem;
    line-height: .68rem;
    font-size: .32rem;
    background: #fff;
}
.header-title{
    color: #333;
}
.left-arrow{
    width: .22rem;
    height: .22rem;
    border-bottom: 2px solid #3395FA;
    border-left: 2px solid #3395FA;
    transform: rotate(45deg);
    display: inline-block;
}
.save-image-btn{
    border: .02rem solid #4285F4;
    border-radius: .44rem;
    width: 3.4rem;
    height: .88rem;
    line-height: .88rem;
    text-align: center;
    font-size: .32rem;
    margin-top: .3rem;
    color: #4285F4;
    display: inline-block;
}
.save-image-btn:hover{
    background: #EAEBF0;
}
.erweima-image{
    width: 200px;
    height: 200px;
}
.erweima-image img{
    width: 100%;
    height: 100%;
}