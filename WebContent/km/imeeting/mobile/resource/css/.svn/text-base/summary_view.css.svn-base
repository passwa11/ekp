@charset "utf-8";
@IMPORT url("../../../../../sys/mobile/css/themes/default/header.css");
@IMPORT url("../../../../../sys/mobile/css/themes/default/listview.css");
@IMPORT url("../../../../../sys/mobile/css/themes/default/nav.css");
@IMPORT url("../../../../../sys/mobile/css/themes/default/person.css");
*{
	margin: 0px;
	padding: 0px;
}


ol, ul {
	list-style: none;
}

address, caption, cite, code, dfn, em, strong, th, var {
	font-weight: normal;
	font-style: normal;
}

.ImeetingFixedItem{
	z-index: 99;
}

.muiSummaryPanelContent{
	margin: 1.5rem 0 0;
	background-color: white;
	display: block!important;
}

.muiAccordionPanel .txtContent {
	line-height: 1.2;
	color: #000;
	font-size: 1.4rem;
	padding: 8px 5px;
	min-height: 3rem;
}

.muiReadButton{
	font-weight: bold;
	width: 95%;
	font-size: 1.6rem;
	margin: 2.3rem auto;
	color: #4285f4; 
	border:1px solid #4285f4;
	text-align: center; 
	border-radius:5px;
	vertical-align: middle;
	min-height: 40px;
	line-height:40px;
}

.muiReadButton .muiAttachmentsnormal{
	margin-bottom: 0;
}

.muiReadButton .muiReadAllItem {
	padding: 0;
}

.muiReadButton .muiAttachments{
	min-height: 40px;
	line-height: 40px;
	margin-bottom: 0;
}

.muiReadButton .muiAttachmentItem{
	min-height: 40px;
}

/**会议人员信息 **/
.muiMeetingList li {
	border-bottom: 1px dashed #e0e0e0;
	line-height:1;
	zoom:1;
	padding:8px 0px; 
	padding-left:5rem; 
	position:relative; 
}

.muiMeetingList li:last-child {
	border-bottom: 0px;
}
.muiMeetingList li:after{ clear:both; visibility:hidden; line-height:0px; content:"clear"; display:block;}
.muiMeetingList strong {
	position:absolute; 
	left:0px; top:0px;
	display: inline-block;
	color: #898989;
	font-size: 1.4rem;
	padding-top:1.5rem;
	padding-left: 0.8rem;
	padding-right: 1.5rem;
}
.muiMeetingList strong>div{ text-align:center; color:#f00; font-size:1.2rem; padding-top:0.4rem;}

.muiMeetingList .staffList{ 
	padding:0.5rem 0; 
	font-size:1.4rem; 
	line-height:1.5;
	margin-left:2rem;
}

.personTotal{
	margin-top:5px;
	text-align: center;
}

/** 会议决议 **/
.muiAccordionPanelTitle>div:last-child{
	left: 0;
	right: 0;
}

.muiAccordionPanel{
	margin: 1.5rem 0 0;
}

.muiImeetingPanelContent{
	padding:0rem 0 0 1rem!important;
}

.muiAccordionPanel .muiAccordionPanelContent{
	padding: 0px 0px;
	min-height: 3rem;
}

.muiAccordionPanelContent .muiAttachments{
	margin-right: 0;
}

.muiAccordionPanel .muiAccordionPanelContent.proceePanelContent{
	padding: 0.8rem 1rem;
}
.muiAccordionPanel .muiAccordionPanelContent.proceePanelContent .muiFieldRtf{ padding-right: 0;}

.muiSummaryInfoBanner {
	position: relative;	
	padding: 1rem 1.2rem;
}
.muiSummaryInfoMask {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	height: 40%;
	background: linear-gradient(90deg, #4D94FE 0%, #50A6FC 50%, #4D94FE 100%);
	z-index: -1;
}

.muiSummaryInfoCard {
	position: relative;
	background-image: url(../images/card_bg.png);
	background-size: 100% 100%;
	background-repeat: no-repeat;
	padding: 1.2rem 2.2rem;
	min-height: 10rem;
}

.muiSummaryInfoItem {
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
	font-family: PingFangSC-Regular;
	font-size: 1.3rem;
	color: #4A4A4A;
	letter-spacing: 0;
	padding: 0.25rem 0;
	opacity: 0.8;
}

.muiSummaryInfoTitle {
	padding: 1rem 0;
	font-size: 1.6rem;
	opacity: 1;
	font-weight: bold;
	font-family: PingFangSC-Medium;
}

.muiAccordionPanelTitle,
.muiNavbarContainer {
	background-color: white;
}

.muiNavitem.muiNavitemSelected span {
	border: none !important;
}

.muiNavitem {
	padding: 0 2.7rem;
	box-sizing: border-box;
}

.muiNavitem span {
	color: #666;
}

.muiNavitemSelected {
	margin: 0;
}

.muiAccordionPanelTitle > div {
	font-weight: unset;
	color: #666;
}

.addBottomTip {
	background-color: #f5f5f5;
}

.muiAccordionPanelTitle span {
    border-color: transparent;
}