@charset "UTF-8";
.lbpmProcessStatus .lbpmProcessText{
    position: absolute;
    text-align: center;
    font-size: 12px;
    font-weight: bold;
    left: 7px;
    right: 0;
    top: 30%;
    bottom: 30%;
    transform: rotate(-27deg);
    transform: rotate(-27deg);
    -ms-transform: rotate(-27deg);
    -o-tranform: rotate(-27deg);
    -webkit-transform: rotate(-27deg);
    -moz-transform: rotate(-27deg);
 }

.lbpmProcessStatus{
    width: 100px;
    height: 100px;
    background-image: url(../images/lbpm-processStatus.png);
    background-size: 100%;
    background-repeat: no-repeat;
    color: #21B77C;
}

.lbpmDiscardStatus{
	width: 100px;
    height: 100px;
    background-image: url(../images/lbpm-discardStatus.png);
    background-size: 100%;
    background-repeat: no-repeat;
    color: #FD696A;
}

/* ===== IE8兼容 - 一倍图 ===== */
@media \0screen {
	.lbpmProcessStatus{
    	background-image: url(../images/lbpm-processStatus-ie.png);
	}
	
	.lbpmDiscardStatus{
	    background-image: url(../images/lbpm-discardStatus-ie.png);
	}
}