.ld-review-mask{
    height:0;
    width:100%;
    position: fixed;
    top:0;
    left:0;
    background:rgba(0,0,0,0.5);
    z-index:999;
 }
 .ld-review-mask.ld-review-mask-show{
     height:100%;
 }
.ld-review-modal-screen{
    position: absolute;
    bottom:0;
    left:0;
    max-height:0;
    width:100%;
    background:white ;
    border-radius: 8px 8px 0 0;
    box-sizing: border-box;
    transition: max-height 0.3s ease-out;
    z-index:1000;
    overflow: hidden;
}
  .ld-review-modal-screen.ld-review-modal-screen-show{
      max-height:90%;
      transition: max-height 0.3s ease-in;
      overflow-y: auto;
      padding-bottom: 75px;
  }
.ld-review-modal-screen-header {
    position: relative;
    height: 44px;
    line-height: 44px;
    font-size: 17px;
    position: relative;
    padding-bottom: 8px;
    margin-bottom: 10px;
}
.ld-review-modal-screen-header i {
    position: absolute;
    height: 10px;
    width: 10px;
    left: 20px;
    top: 14px;
    transform: rotate(-45deg);
    border-bottom: 1px solid #111f2c;
    border-left: 1px solid #111f2c;
}
.ld-review-modal-screen-header span {
    text-align: center;
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
}
.ld-review-modal-screen-header:after{
    position: absolute;
    content: '';
    height: 8px;
    width: 100%;
    background: #f2f3f5;
    bottom: 0;
    left: 0;
}
.ld-review-modal-screen-main{
    height:100%;
    overflow: hidden;
}
.ld-review-modal-screen-main-status,.ld-review-modal-screen-main-time {
    margin-bottom: 24px;
}
.ld-review-modal-screen-main-title {
    font-family: PingFangSC-Regular;
    font-size: 15px;
    color: #111f2c;
    letter-spacing: 0;
    padding-left: 16px;
} 
.ld-review-modal-screen-main-content ul{
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    width:100%;
}
.ld-review-modal-screen-main-content ul li {
    width:50%;
    text-align: center;
    line-height: 36px;
    padding: 0 15px;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    margin-top: 15px;
}
.ld-review-modal-screen-main-content ul li span {
    border:1px solid #eee;
    width:100%;
    border-radius: 8px;
}
.customTime{
    display: flex;
    justify-content: center;
    align-items: center;
    height:36px;
    margin-top: 15px;
}
.customTime div.customTimeBox{
    width:50%;
    padding: 0 15px; 
    box-sizing: border-box;
    height:100%;
}
.customTime div.customTimeBox input {
    width:100%;
    text-align: center;
    height:100%;
    border:1px solid #eee;
    border-radius: 8px;
    outline: none;
}
.customTime div.customTimeBox input::placeholder{
    font-size: 15px;
}

/* footer */
.ld-review-modal-screen.ld-review-modal-screen-show .ld-review-modal-screen-footer{
    display: flex;
}
.ld-review-modal-screen-footer{
    position: fixed;
    bottom: 0;
    height:75px;
    width:100%;
    display: flex;
    justify-content: space-between;
    padding: 0 25px;
    box-sizing: border-box;
    box-shadow: 0 -2px 8px 0 rgba(173,173,173,0.50);
    align-items: center;
    background:white;
    display: none;
}
.ld-review-modal-screen-footer div{
    height:52px;
    line-height: 52px;
    text-align: center;
    border-radius: 8px;
    font-size: 17px;
    width:180px;
}
.ld-review-modal-screen-footer div.reset {
    margin-right:10px;
    border: 1px solid #e8eaeb;
    color: rgba(17,31,44,0.56);
}
.ld-review-modal-screen-footer div.confirm{
    background: #0089ff;
    color: #fff;
}