@charset "utf-8";

/* 新版门户 portlet */

.new_portlet {
	padding-left: 5px;
}

.new_portlet .hot,
.new_portlet .top,
.new_portlet .pink {
	margin-right: 1px;
	height: 18px;
	margin-bottom: 0px;
	display: inline-block;
	height: 18px;
	line-height: 18px;
	width: 25px;
	font-size: 10px;
	text-indent: -9999em;
}

.new_portlet .hot {
	background: url(../images/portlet_hot.png) no-repeat left center;
}

.new_portlet .top {
	background: url(../images/portlet_top.png) no-repeat left center;
}

.new_portlet .pink {
	background: url(../images/portlet_pink.png) no-repeat left center;
}

.new_portlet .text {
	margin-right: 0px;
	display: inline;
}

.new_portlet a:hover {}

.new_portlet .count {
	font-size: 11px;
	height: 13px;
	margin-left: 0px;
	text-align: center;
	display: inline-block;
	vertical-align: middle;
	line-height: 13px;
	border:1px solid #c9cbd1;
	min-width: 9px;
	padding:0 5px;
	position: relative;
	top:-5px;
}
.new_portlet .count:after{
	content:"";
	display: inline-block;
	width: 5px;
	height: 5px;
	background: url(../images/count_arrow.png) no-repeat left bottom;
	position: absolute;
	left: 3px;
	top:13px;
}
